---
interface BreadcrumbItem {
  name: string;
  href: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

// Structured data for Google
const structuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": items.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.href === items[items.length - 1].href ? undefined : new URL(item.href, Astro.site).href
  }))
};
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

<nav class="max-w-7xl mx-auto px-4 py-4" aria-label="Breadcrumb">
  <ol class="flex items-center flex-wrap gap-2 font-mono text-xs text-text-muted">
    {items.map((item, index) => (
      <li class="flex items-center gap-2">
        {index < items.length - 1 ? (
          <a href={item.href} class="text-accent-cyan hover:text-accent-green transition">
            {item.name}
          </a>
        ) : (
          <span class="text-text-secondary">{item.name}</span>
        )}
        {index < items.length - 1 && <span>&gt;</span>}
      </li>
    ))}
  </ol>
</nav>
