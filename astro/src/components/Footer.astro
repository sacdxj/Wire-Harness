---
const today = new Date();
const currentYear = today.getFullYear();

// 从环境变量获取联系信息
const contactEmail = import.meta.env.VITE_CONTACT_EMAIL || 'Gben@trycay.com';
const contactPhone = import.meta.env.VITE_CONTACT_PHONE || '+8618928435743';
---

<footer class="border-t border-border bg-bg-secondary relative z-10 mt-20">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-8 mb-8">
      <!-- Brand -->
      <div>
        <h3 class="font-mono text-lg font-bold text-accent-cyan mb-4">Trycay</h3>
        <p class="text-text-secondary text-sm leading-relaxed">
          Professional terminal wire assembly manufacturer by Shenzhen Youboda Technology Co., Ltd.
          Specializing in precision crimped assemblies for JST, Molex, and TE compatible connectors.
        </p>
        <div class="flex gap-3 mt-4">
          <span class="font-mono text-[0.6rem] px-2 py-1 bg-accent-green/10 border border-accent-green text-accent-green">ISO 9001:2015</span>
          <span class="font-mono text-[0.6rem] px-2 py-1 bg-accent-green/10 border border-accent-green text-accent-green">UL Certified</span>
        </div>
      </div>

      <!-- Assembly Types -->
      <div>
        <h4 class="font-mono text-xs font-bold uppercase tracking-widest text-accent-cyan mb-4">Assembly Types</h4>
        <ul class="space-y-2 text-sm text-text-secondary">
          <li><a href="/products" class="hover:text-accent-cyan transition">All Assemblies</a></li>
          <li><a href="/products#pre-crimped" class="hover:text-accent-cyan transition">Pre-Crimped Leads</a></li>
          <li><a href="/products#wire-to-board" class="hover:text-accent-cyan transition">Wire-to-Board</a></li>
          <li><a href="/products#wire-to-wire" class="hover:text-accent-cyan transition">Wire-to-Wire</a></li>
          <li><a href="/products#ribbon" class="hover:text-accent-cyan transition">Ribbon Cables</a></li>
          <li><a href="/factory/custom" class="hover:text-accent-cyan transition">Custom Assembly</a></li>
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="font-mono text-xs font-bold uppercase tracking-widest text-accent-cyan mb-4">Company</h4>
        <ul class="space-y-2 text-sm text-text-secondary">
          <li><a href="/about" class="hover:text-accent-cyan transition">About Us</a></li>
          <li><a href="/services" class="hover:text-accent-cyan transition">Services</a></li>
          <li><a href="/factory" class="hover:text-accent-cyan transition">Capabilities</a></li>
          <li><a href="/contact" class="hover:text-accent-cyan transition">Contact</a></li>
        </ul>
      </div>

      <!-- Resources & Support -->
      <div>
        <h4 class="font-mono text-xs font-bold uppercase tracking-widest text-accent-cyan mb-4">Resources</h4>
        <ul class="space-y-2 text-sm text-text-secondary">
          <li><a href="/blog" class="hover:text-accent-cyan transition">Blog</a></li>
          <li><a href="/compatibility" class="hover:text-accent-cyan transition">Compatibility Guide</a></li>
          <li><a href="/technical-resources" class="hover:text-accent-cyan transition">Technical Resources</a></li>
          <li><a href="/technical-resources/wire-gauge-chart" class="hover:text-accent-cyan transition">Wire Gauge Chart</a></li>
          <li><a href="/technical-resources/crimp-quality-standards" class="hover:text-accent-cyan transition">Quality Standards</a></li>
        </ul>
      </div>

      <!-- Applications & Contact -->
      <div>
        <h4 class="font-mono text-xs font-bold uppercase tracking-widest text-accent-cyan mb-4">Applications</h4>
        <ul class="space-y-2 text-sm text-text-secondary mb-6">
          <li><a href="/applications/consumer-electronics" class="hover:text-accent-cyan transition">Consumer Electronics</a></li>
          <li><a href="/applications/industrial-control" class="hover:text-accent-cyan transition">Industrial Automation</a></li>
          <li><a href="/applications/led-lighting" class="hover:text-accent-cyan transition">LED Lighting</a></li>
        </ul>

        <h4 class="font-mono text-xs font-bold uppercase tracking-widest text-accent-cyan mb-4">Contact</h4>
        <ul class="space-y-2 text-sm text-text-secondary">
          <li><a href={`mailto:${contactEmail}`} class="hover:text-accent-cyan transition">{contactEmail}</a></li>
          <li><a href={`tel:${contactPhone}`} class="hover:text-accent-cyan transition">{contactPhone}</a></li>
          <li class="pt-2"><a href="/contact" class="inline-block px-3 py-1 bg-accent-cyan/10 border border-accent-cyan/30 text-accent-cyan font-mono text-xs hover:bg-accent-cyan/20 transition">Upload Drawing for Quote</a></li>
        </ul>
      </div>
    </div>

    <div class="pt-8 border-t border-border flex flex-col md:flex-row justify-between items-center gap-4 text-text-muted">
      <p class="font-mono text-xs">
        &copy; {currentYear} Trycay by Shenzhen Youboda Technology Co., Ltd. All specifications subject to change without notice.
      </p>
      <div class="flex gap-4 text-sm">
        <a href="#" class="hover:text-accent-cyan transition">Privacy Policy</a>
        <a href="#" class="hover:text-accent-cyan transition">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
