---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Compatibility', href: '/compatibility' },
  { name: 'TE Connectivity Compatible', href: '/compatibility/te-compatible' }
];
---

<MainLayout
  title="TE Connectivity Compatible Connectors | AMP, Econoseal Wire Assemblies"
  description="Factory-direct TE/AMP compatible wire assemblies. Econoseal, AMP MCP, modular connectors for industrial and automotive. 30-50% cost savings."
>
  <Breadcrumb items={breadcrumbItems} />

  <section class="px-4 py-16">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12">
        <p class="font-mono text-xs text-accent-cyan uppercase tracking-widest mb-4">Connector Compatibility</p>
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">TE Connectivity Compatible Connectors</h1>
        <p class="text-lg text-text-secondary max-w-3xl mx-auto">
          TE/AMP compatible connectors including Econoseal, AMP MCP, and other widely used industrial series. Rugged alternatives for demanding applications.
        </p>
      </div>

      <!-- Key Series -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        <div class="bg-bg-secondary border border-border p-8">
          <h2 class="text-xl font-bold mb-4">Econoseal Compatible</h2>
          <p class="text-text-secondary mb-4">Sealed connectors for automotive and harsh environment applications.</p>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="text-text-muted">Pitch Range</span>
              <span class="font-mono">2.54mm - 6.35mm</span>
            </div>
            <div class="flex justify-between">
              <span class="text-text-muted">Sealing</span>
              <span class="font-mono">IP67 rated</span>
            </div>
            <div class="flex justify-between">
              <span class="text-text-muted">Current</span>
              <span class="font-mono">Up to 8A</span>
            </div>
          </div>
        </div>

        <div class="bg-bg-secondary border border-border p-8">
          <h2 class="text-xl font-bold mb-4">AMP MCP Compatible</h2>
          <p class="text-text-secondary mb-4">Miniature sealed connectors for compact automotive systems.</p>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="text-text-muted">Pitch Range</span>
              <span class="font-mono">2.2mm - 3.96mm</span>
            </div>
            <div class="flex justify-between">
              <span class="text-text-muted">Sealing</span>
              <span class="font-mono">IP67 rated</span>
            </div>
            <div class="flex justify-between">
              <span class="text-text-muted">Current</span>
              <span class="font-mono">Up to 13A</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Applications -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold mb-6">Applications</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="border border-border p-6">
            <h3 class="font-bold mb-3">Automotive</h3>
            <ul class="space-y-2 text-sm text-text-secondary">
              <li>• Engine compartments</li>
              <li>• Transmission sensors</li>
              <li>• Exterior lighting</li>
            </ul>
          </div>
          <div class="border border-border p-6">
            <h3 class="font-bold mb-3">Industrial</h3>
            <ul class="space-y-2 text-sm text-text-secondary">
              <li>• Outdoor equipment</li>
              <li>• Heavy machinery</li>
              <li>• Process control</li>
            </ul>
          </div>
          <div class="border border-border p-6">
            <h3 class="font-bold mb-3">Marine</h3>
            <ul class="space-y-2 text-sm text-text-secondary">
              <li>• Boat electronics</li>
              <li>• Navigation systems</li>
              <li>• Engine controls</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Benefits -->
      <section class="mb-12 bg-bg-secondary border border-accent-cyan p-8">
        <h2 class="text-2xl font-bold mb-6 text-center">Why Choose Our TE Compatible Assemblies?</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="font-mono text-3xl font-bold text-accent-green mb-2">30-50%</div>
            <div class="font-bold">Cost Savings</div>
          </div>
          <div class="text-center">
            <div class="font-mono text-3xl font-bold text-accent-green mb-2">IP67</div>
            <div class="font-bold">Sealed Options</div>
          </div>
          <div class="text-center">
            <div class="font-mono text-3xl font-bold text-accent-green mb-2">100%</div>
            <div class="font-bold">Drop-in Compatible</div>
          </div>
          <div class="text-center">
            <div class="font-mono text-3xl font-bold text-accent-green mb-2">48h</div>
            <div class="font-bold">Samples Available</div>
          </div>
        </div>
      </section>

      <!-- CTA -->
      <section class="text-center">
        <h2 class="text-2xl font-bold mb-4">Need TE Compatible Assemblies?</h2>
        <p class="text-text-secondary mb-6 max-w-2xl mx-auto">
          Share your TE/AMP part numbers and we'll provide compatible alternatives with competitive pricing.
        </p>
        <a href="/contact" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300">
          Request Quote
        </a>
      </section>
    </div>
  </section>
</MainLayout>
