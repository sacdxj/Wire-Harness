---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const compatibilities = [
  {
    title: 'JST Compatible Connectors',
    description: 'Full range of JST-compatible terminal wire assemblies. PH, XH, EH, VH, ZH series equivalents with 30-50% cost savings.',
    href: '/compatibility/jst-compatible',
    series: ['PH', 'XH', 'EH', 'VH', 'ZH'],
    specs: '2.0mm - 3.96mm Pitch',
    image: '/images/compatibility/jst-series-overview.jpg'
  },
  {
    title: 'JST PH Cable Assembly',
    description: '2.0mm pitch ultra-compact wire-to-board connectors for high-density applications in smartphones, tablets, and wearables.',
    href: '/compatibility/jst-ph-cable-assembly',
    series: ['PH'],
    specs: '2.0mm Pitch | 100V 2A',
    icon: 'âš¡'
  },
  {
    title: 'JST XH Cable Assembly',
    description: '2.5mm pitch positive locking connectors for secure power delivery in industrial controls and LED lighting applications.',
    href: '/compatibility/jst-xh-cable-assembly',
    series: ['XH'],
    specs: '2.5mm Pitch | 250V 3A',
    icon: 'ðŸ”’'
  },
  {
    title: 'Molex Compatible Connectors',
    description: 'Molex-equivalent connector systems including PicoBlade, Micro-Latch, and other popular series at competitive prices.',
    href: '/compatibility/molex-compatible',
    series: ['PicoBlade', 'Micro-Latch', 'KK'],
    specs: '1.25mm - 4.2mm Pitch',
    image: '/images/compatibility/molex-series.jpg'
  }
];

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Compatibility', href: '/compatibility' }
];
---

<MainLayout
  title="Connector Compatibility Guide | JST & Molex Alternatives"
  description="JST and Molex compatible wire harness assemblies at factory-direct prices. PH, XH, EH, VH series equivalents. Same quality, 30-50% lower cost."
>
  <Breadcrumb items={breadcrumbItems} />

  <section class="px-4 py-16">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12">
        <p class="font-mono text-xs text-accent-cyan uppercase tracking-widest mb-4">Connector Compatibility</p>
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">Compatible Connector Systems</h1>
        <p class="text-lg text-text-secondary max-w-3xl mx-auto">
          Full range of JST and Molex-compatible terminal wire assemblies offering the same quality and reliability at significantly lower cost.
        </p>
      </div>

      <!-- Benefits Banner -->
      <section class="mb-12 bg-bg-secondary border border-accent-cyan p-8">
        <h2 class="text-2xl font-bold mb-6 text-center">Why Choose Compatible Connectors?</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="font-mono text-3xl font-bold text-accent-green mb-2">30-50%</div>
            <div class="font-bold">Cost Savings</div>
            <p class="text-text-secondary text-sm mt-1">Without compromising quality</p>
          </div>
          <div class="text-center">
            <div class="font-mono text-3xl font-bold text-accent-green mb-2">100%</div>
            <div class="font-bold">Compatibility</div>
            <p class="text-text-secondary text-sm mt-1">Drop-in replacement</p>
          </div>
          <div class="text-center">
            <div class="font-mono text-3xl font-bold text-accent-green mb-2">48h</div>
            <div class="font-bold">Quick Delivery</div>
            <p class="text-text-secondary text-sm mt-1">Rapid prototyping</p>
          </div>
          <div class="text-center">
            <div class="font-mono text-3xl font-bold text-accent-green mb-2">ISO</div>
            <div class="font-bold">Certified</div>
            <p class="text-text-secondary text-sm mt-1">9001:2015 Quality</p>
          </div>
        </div>
      </section>

      <!-- Compatibility Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        {compatibilities.map((comp, index) => (
          <a
            href={comp.href}
            class="group block bg-bg-secondary border border-border overflow-hidden transition-all duration-300 hover:border-accent-cyan hover:-translate-y-1"
            style={`animation: fadeInUp 0.6s ease-out ${index * 0.1}s backwards`}
          >
            {comp.image && (
              <div class="aspect-video overflow-hidden">
                <img
                  src={comp.image}
                  alt={comp.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              </div>
            )}
            <div class="p-8">
              <div class="flex items-start gap-4 mb-4">
                {comp.icon && <div class="text-4xl">{comp.icon}</div>}
                <div class="flex-1">
                  <h2 class="text-xl font-bold mb-2 group-hover:text-accent-cyan transition-colors">
                    {comp.title}
                  </h2>
                  <p class="text-text-secondary text-sm mb-3">
                    {comp.description}
                  </p>
                  <div class="flex flex-wrap gap-2 mb-3">
                    {comp.series.map(s => (
                      <span class="font-mono text-[0.6rem] px-2 py-1 bg-accent-cyan/10 border border-accent-cyan/30 text-accent-cyan uppercase">
                        {s}
                      </span>
                    ))}
                  </div>
                  <div class="font-mono text-xs text-text-muted">
                    {comp.specs}
                  </div>
                </div>
              </div>
              <div class="flex items-center text-accent-cyan font-mono text-sm pt-4 border-t border-border">
                <span>View Details</span>
                <span class="ml-2 group-hover:translate-x-1 transition-transform">â†’</span>
              </div>
            </div>
          </a>
        ))}
      </div>

      <!-- Quality Assurance -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6 text-center">Quality You Can Trust</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="border-l-2 border-accent-cyan pl-6">
            <h3 class="font-bold mb-2">Dimensional Accuracy</h3>
            <p class="text-text-secondary text-sm">Precise dimensional control ensures perfect mating with existing housings and headers.</p>
          </div>
          <div class="border-l-2 border-accent-cyan pl-6">
            <h3 class="font-bold mb-2">Material Quality</h3>
            <p class="text-text-secondary text-sm">PA66, PBT, and high-quality materials with UL94V-0 flame rating.</p>
          </div>
          <div class="border-l-2 border-accent-cyan pl-6">
            <h3 class="font-bold mb-2">Performance</h3>
            <p class="text-text-secondary text-sm">Current and voltage ratings meet or exceed OEM specifications.</p>
          </div>
          <div class="border-l-2 border-accent-cyan pl-6">
            <h3 class="font-bold mb-2">Testing</h3>
            <p class="text-text-secondary text-sm">100% continuity testing, pull testing, and inspection for consistent quality.</p>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="bg-bg-secondary border border-accent-cyan p-8 text-center">
        <h2 class="text-2xl font-bold mb-4">Need a Cross-Reference?</h2>
        <p class="text-text-secondary mb-6 max-w-2xl mx-auto">
          Share your JST or Molex part numbers and we'll provide compatible alternatives with competitive pricing within 24 hours.
        </p>
        <a href="/contact" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300">
          Request Cross-Reference Quote
        </a>
      </section>
    </div>
  </section>
</MainLayout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
