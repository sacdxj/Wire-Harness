---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Compatibility', href: '/compatibility' },
  { name: 'Hirose Compatible', href: '/compatibility/hirose-compatible' }
];
---

<MainLayout
  title="Hirose Compatible Connectors | DF, FH, ZH Wire Assemblies"
  description="Factory-direct Hirose compatible wire assemblies. DF, FH, ZH series equivalents for automotive and industrial applications. 30-50% cost savings."
>
  <Breadcrumb items={breadcrumbItems} />

  <section class="px-4 py-16">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12">
        <p class="font-mono text-xs text-accent-cyan uppercase tracking-widest mb-4">Connector Compatibility</p>
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">Hirose Compatible Connectors</h1>
        <p class="text-lg text-text-secondary max-w-3xl mx-auto">
          Hirose-compatible DF series and other popular connector families for automotive, industrial, and computer applications.
        </p>
      </div>

      <!-- DF Series Focus -->
      <div class="bg-bg-secondary border border-accent-cyan p-8 mb-12">
        <h2 class="text-2xl font-bold mb-4">DF Series Compatible</h2>
        <p class="text-text-secondary mb-6">
          The DF series is one of Hirose's most popular wire-to-board connector families, widely used in automotive and industrial applications.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
            <div class="font-mono text-xs text-accent-amber uppercase tracking-wider mb-2">Pitch Options</div>
            <div class="font-bold">1.5mm - 2.5mm</div>
          </div>
          <div>
            <div class="font-mono text-xs text-accent-amber uppercase tracking-wider mb-2">Current Rating</div>
            <div class="font-bold">2-3A</div>
          </div>
          <div>
            <div class="font-mono text-xs text-accent-amber uppercase tracking-wider mb-2">Voltage Rating</div>
            <div class="font-bold">250V AC/DC</div>
          </div>
        </div>
      </div>

      <!-- Applications -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold mb-6">Applications</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="border border-border p-6">
            <h3 class="font-bold mb-3">Automotive</h3>
            <ul class="space-y-2 text-sm text-text-secondary">
              <li>• ECU connections</li>
              <li>• Sensor harnesses</li>
              <li>• Interior electronics</li>
            </ul>
          </div>
          <div class="border border-border p-6">
            <h3 class="font-bold mb-3">Industrial</h3>
            <ul class="space-y-2 text-sm text-text-secondary">
              <li>• Factory automation</li>
              <li>• Control systems</li>
              <li>• PLC I/O</li>
            </ul>
          </div>
          <div class="border border-border p-6">
            <h3 class="font-bold mb-3">Computer</h3>
            <ul class="space-y-2 text-sm text-text-secondary">
              <li>• Power supplies</li>
              <li>• Motherboard headers</li>
              <li>• Internal cabling</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- CTA -->
      <section class="text-center">
        <h2 class="text-2xl font-bold mb-4">Need Hirose Compatible Assemblies?</h2>
        <p class="text-text-secondary mb-6 max-w-2xl mx-auto">
          Share your Hirose part numbers and we'll provide compatible alternatives with competitive pricing.
        </p>
        <a href="/contact" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300">
          Request Quote
        </a>
      </section>
    </div>
  </section>
</MainLayout>
