---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Factory', href: '/factory' }
];
---

<MainLayout
  title="Terminal Wire Assembly Factory | Custom OEM Manufacturer"
  description="Leading terminal wire assembly factory in China. Specializing in custom OEM wire harness manufacturing for global brands. ISO 9001 certified, UL approved. Get factory-direct pricing."
>
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "HARNESS+LAB",
    "url": "https://your-wire-harness-factory.com",
    "logo": "https://your-wire-harness-factory.com/logo.png",
    "description": "Terminal wire assembly factory specializing in custom OEM manufacturing",
    "address": {
      "@type": "PostalAddress",
      "addressCountry": "CN"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "contactType": "sales",
      "email": "engineering@harnesslab.com"
    },
    "sameAs": [
      "https://www.linkedin.com/company/harnesslab"
    ]
  })} />

  <Breadcrumb items={breadcrumbItems} />

  <!-- Hero Section with Factory Image -->
  <section class="relative h-[60vh] min-h-[400px] flex items-center overflow-hidden">
    <img
      src="/images/factory/exterior.jpg"
      alt="Manufacturing Facility Exterior"
      class="absolute inset-0 w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-bg-primary via-bg-primary/80 to-transparent"></div>
    <div class="relative z-10 px-4 max-w-7xl mx-auto w-full">
      <p class="font-mono text-xs text-accent-cyan uppercase tracking-widest mb-4">Our Facility</p>
      <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-6">
        Terminal Wire Assembly <span class="text-accent-cyan">Factory</span>
      </h1>
      <p class="text-xl text-text-secondary leading-relaxed max-w-3xl">
        A state-of-the-art manufacturing facility dedicated to precision terminal wire assembly and custom wire harness production. We serve global OEMs with cost-effective, high-quality solutions.
      </p>
    </div>
  </section>

  <section class="px-4 py-16">
    <div class="max-w-5xl mx-auto">

      <!-- Factory Overview -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
          <span class="w-8 h-8 bg-accent-cyan/20 flex items-center justify-center text-accent-cyan text-sm font-mono">01</span>
          Manufacturing Excellence
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-bg-secondary border border-border p-6">
            <div class="font-mono text-3xl font-bold text-accent-cyan mb-2">8,000m²</div>
            <div class="text-text-muted text-sm">Production Facility</div>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <div class="font-mono text-3xl font-bold text-accent-cyan mb-2">150+</div>
            <div class="text-text-muted text-sm">Skilled Workers</div>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <div class="font-mono text-3xl font-bold text-accent-cyan mb-2">5M+</div>
            <div class="text-text-muted text-sm">Monthly Capacity</div>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <div class="font-mono text-3xl font-bold text-accent-cyan mb-2">15+</div>
            <div class="text-text-muted text-sm">Years Experience</div>
          </div>
        </div>
      </section>

      <!-- Equipment & Capabilities -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
          <span class="w-8 h-8 bg-accent-cyan/20 flex items-center justify-center text-accent-cyan text-sm font-mono">02</span>
          Equipment & Technology
        </h2>

        <!-- Large Factory Interior Image -->
        <div class="mb-8 rounded-lg overflow-hidden border border-border">
          <img
            src="/images/factory/interior-8000sqm.jpg"
            alt="8000 Square Meter Factory Interior"
            class="w-full h-auto"
            loading="lazy"
          />
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold mb-3">Automated Processing</h3>
            <ul class="space-y-2 text-text-secondary text-sm">
              <li class="flex items-start gap-2"><span class="text-accent-cyan">▸</span> Fully automatic cutting machines</li>
              <li class="flex items-start gap-2"><span class="text-accent-cyan">▸</span> Precision wire stripping systems</li>
              <li class="flex items-start gap-2"><span class="text-accent-cyan">▸</span> Automated crimping equipment</li>
              <li class="flex items-start gap-2"><span class="text-accent-cyan">▸</span> Ultrasonic metal welding</li>
            </ul>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold mb-3">Quality Testing</h3>
            <ul class="space-y-2 text-text-secondary text-sm">
              <li class="flex items-start gap-2"><span class="text-accent-cyan">▸</span> 100% continuity testers</li>
              <li class="flex items-start gap-2"><span class="text-accent-cyan">▸</span> Hi-pot testing systems</li>
              <li class="flex items-start gap-2"><span class="text-accent-cyan">▸</span> Pull test verification</li>
              <li class="flex items-start gap-2"><span class="text-accent-cyan">▸</span> Insulation resistance testers</li>
            </ul>
          </div>
        </div>

        <!-- Equipment Images Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
          <div class="rounded-lg overflow-hidden border border-border">
            <img
              src="/images/factory/automated-equipment.jpg"
              alt="Automated Manufacturing Equipment"
              class="w-full h-48 object-cover"
              loading="lazy"
            />
            <div class="p-4 bg-bg-secondary">
              <h4 class="font-bold text-sm mb-1">Automated Equipment</h4>
              <p class="text-text-secondary text-xs">Precision cutting, stripping, and crimping machines</p>
            </div>
          </div>
          <div class="rounded-lg overflow-hidden border border-border">
            <img
              src="/images/factory/quality-testing.jpg"
              alt="Quality Control Testing Equipment"
              class="w-full h-48 object-cover"
              loading="lazy"
            />
            <div class="p-4 bg-bg-secondary">
              <h4 class="font-bold text-sm mb-1">Quality Testing</h4>
              <p class="text-text-secondary text-xs">Electrical testing, hi-pot, and pull testing</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Production Lines -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
          <span class="w-8 h-8 bg-accent-cyan/20 flex items-center justify-center text-accent-cyan text-sm font-mono">03</span>
          Production Lines
        </h2>

        <!-- Production Line Image -->
        <div class="mb-8 rounded-lg overflow-hidden border border-border">
          <img
            src="/images/factory/production-line.jpg"
            alt="Factory Production Line with Workers"
            class="w-full h-auto"
            loading="lazy"
          />
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold text-lg mb-2">Rapid Prototyping Line</h3>
            <p class="text-text-secondary mb-4">48-hour turnaround for design validation and quick iterations.</p>
            <div class="flex flex-wrap gap-3">
              <span class="font-mono text-xs px-3 py-1 bg-accent-cyan/10 border border-accent-cyan/30 text-accent-cyan">Manual Assembly</span>
              <span class="font-mono text-xs px-3 py-1 bg-accent-cyan/10 border border-accent-cyan/30 text-accent-cyan">Quick Setup</span>
              <span class="font-mono text-xs px-3 py-1 bg-accent-cyan/10 border border-accent-cyan/30 text-accent-cyan">Flexible</span>
            </div>
          </div>

          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold text-lg mb-2">Low-Medium Volume Line</h3>
            <p class="text-text-secondary mb-4">Semi-automated assembly for 1K-100K unit production runs.</p>
            <div class="flex flex-wrap gap-3">
              <span class="font-mono text-xs px-3 py-1 bg-accent-green/10 border border-accent-green/30 text-accent-green">Semi-Auto</span>
              <span class="font-mono text-xs px-3 py-1 bg-accent-green/10 border border-accent-green/30 text-accent-green">Cost-Effective</span>
              <span class="font-mono text-xs px-3 py-1 bg-accent-green/10 border border-accent-green/30 text-accent-green">Fast Changeover</span>
            </div>
          </div>

          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold text-lg mb-2">High-Volume Line</h3>
            <p class="text-text-secondary mb-4">Fully automated assembly for 100K+ unit production runs.</p>
            <div class="flex flex-wrap gap-3">
              <span class="font-mono text-xs px-3 py-1 bg-accent-amber/10 border border-accent-amber/30 text-accent-amber">Fully Automated</span>
              <span class="font-mono text-xs px-3 py-1 bg-accent-amber/10 border border-accent-amber/30 text-accent-amber">Consistent Quality</span>
              <span class="font-mono text-xs px-3 py-1 bg-accent-amber/10 border border-accent-amber/30 text-accent-amber">Best Pricing</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Who We Serve -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
          <span class="w-8 h-8 bg-accent-cyan/20 flex items-center justify-center text-accent-cyan text-sm font-mono">04</span>
          Who We Serve
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="border-l-2 border-accent-cyan pl-6">
            <h3 class="font-bold mb-2">OEM Manufacturers</h3>
            <p class="text-text-secondary text-sm">Direct factory partnership for established brands requiring consistent quality and volume production.</p>
          </div>
          <div class="border-l-2 border-accent-cyan pl-6">
            <h3 class="font-bold mb-2">Contract Manufacturers</h3>
            <p class="text-text-secondary text-sm">Reliable subcontracting partner for CMs needing wire harness expertise and capacity.</p>
          </div>
          <div class="border-l-2 border-accent-cyan pl-6">
            <h3 class="font-bold mb-2">Product Designers</h3>
            <p class="text-text-secondary text-sm">Engineering support from prototype through production for new product development.</p>
          </div>
        </div>
      </section>

      <!-- Certifications -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
          <span class="w-8 h-8 bg-accent-cyan/20 flex items-center justify-center text-accent-cyan text-sm font-mono">05</span>
          Certifications & Compliance
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-bg-secondary border border-accent-green/50 p-6 text-center">
            <div class="font-mono text-sm font-bold text-accent-green mb-2">ISO 9001:2015</div>
            <p class="text-text-muted text-xs">Quality Management System</p>
          </div>
          <div class="bg-bg-secondary border border-accent-green/50 p-6 text-center">
            <div class="font-mono text-sm font-bold text-accent-green mb-2">UL Certified</div>
            <p class="text-text-muted text-xs">Wire Harness Safety</p>
          </div>
          <div class="bg-bg-secondary border border-accent-green/50 p-6 text-center">
            <div class="font-mono text-sm font-bold text-accent-green mb-2">REACH Compliant</div>
            <p class="text-text-muted text-xs">EU Chemical Regulations</p>
          </div>
          <div class="bg-bg-secondary border border-accent-green/50 p-6 text-center">
            <div class="font-mono text-sm font-bold text-accent-green mb-2">RoHS Compliant</div>
            <p class="text-text-muted text-xs">Hazardous Substances Directive</p>
          </div>
        </div>
      </section>

      <!-- Why Choose Us -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
          <span class="w-8 h-8 bg-accent-cyan/20 flex items-center justify-center text-accent-cyan text-sm font-mono">06</span>
          Why Choose Our Factory
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold mb-2">Factory-Direct Pricing</h3>
              <p class="text-text-secondary text-sm">No middlemen. Work directly with the manufacturer for better pricing and faster communication.</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold mb-2">Quality Guaranteed</h3>
              <p class="text-text-secondary text-sm">ISO 9001 certified processes and 100% testing ensure consistent quality.</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold mb-2">Rapid Response</h3>
              <p class="text-text-secondary text-sm">48-hour quoting and 48-hour prototypes for urgent projects.</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold mb-2">Full Customization</h3>
              <p class="text-text-secondary text-sm">Complete design flexibility from connector selection to assembly configuration.</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Packaging & Shipping -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
          <span class="w-8 h-8 bg-accent-cyan/20 flex items-center justify-center text-accent-cyan text-sm font-mono">07</span>
          Packaging & Global Shipping
        </h2>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div class="rounded-lg overflow-hidden border border-border">
            <img
              src="/images/factory/packaging-shipping.jpg"
              alt="Packaging and Shipping Area"
              class="w-full h-64 object-cover"
              loading="lazy"
            />
          </div>
          <div class="flex flex-col justify-center">
            <div class="space-y-4">
              <div class="border-l-2 border-accent-cyan pl-6">
                <h3 class="font-bold mb-2">Professional Packaging</h3>
                <p class="text-text-secondary text-sm">Custom packaging solutions to protect products during transit. Anti-static, moisture-proof, and shock-resistant options available.</p>
              </div>
              <div class="border-l-2 border-accent-cyan pl-6">
                <h3 class="font-bold mb-2">Global Shipping</h3>
                <p class="text-text-secondary text-sm">Worldwide delivery through reliable logistics partners. Express air freight and sea freight options for urgent or volume orders.</p>
              </div>
              <div class="border-l-2 border-accent-cyan pl-6">
                <h3 class="font-bold mb-2">Quality Assurance</h3>
                <p class="text-text-secondary text-sm">Final inspection and testing before packaging. Complete traceability with batch numbering and quality certificates.</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA -->
      <section class="bg-bg-secondary border border-accent-cyan p-8 text-center">
        <h2 class="text-2xl font-bold mb-4">Ready to Work with Our Factory?</h2>
        <p class="text-text-secondary mb-6 max-w-2xl mx-auto">
          Get a competitive quote within 24 hours. Send us your specifications, drawings, or BOM for a detailed proposal.
        </p>
        <a href="/contact" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300">
          Request Factory Quote
        </a>
      </section>
    </div>
  </section>
</MainLayout>
