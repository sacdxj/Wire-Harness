---
import MainLayout from '../layouts/MainLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Services', href: '/services' }
];
---

<MainLayout
  title="Services & Capabilities | Custom Wire Harness Solutions"
  description="Complete wire harness manufacturing services - custom design, rapid prototyping, volume production, and assembly. JST/Molex/TE compatible specialists."
>
  <Breadcrumb items={breadcrumbItems} />

  <section class="px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <div class="mb-12">
        <p class="font-mono text-xs text-accent-cyan uppercase tracking-widest mb-4">Our Services</p>
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-6">Wire Harness Solutions</h1>
        <p class="text-lg text-text-secondary leading-relaxed">
          From concept to production, we provide comprehensive wire harness manufacturing services tailored to your specific requirements. Our expertise spans connector selection, custom design, rapid prototyping, and high-volume production.
        </p>
      </div>

      <!-- Services Grid -->
      <div class="space-y-8 mb-16">
        <!-- Service 1 -->
        <div class="bg-bg-secondary border border-border overflow-hidden">
          <div class="aspect-video overflow-hidden">
            <img
              src="/images/services/cad-design.jpg"
              alt="CAD Wire Harness Design"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
          <div class="p-8">
            <div class="flex items-start gap-6">
              <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <div class="flex-1">
                <h2 class="text-xl font-bold mb-3">Custom Wire Harness Design</h2>
                <p class="text-text-secondary mb-4">Engineering-led design services from schematic to production documentation.</p>
                <ul class="space-y-2 text-sm text-text-secondary">
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>Connector selection and compatibility analysis</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>Custom cable assembly design and optimization</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>DFM analysis for cost-effective manufacturing</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>Full CAD documentation and drawings</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Service 2 -->
        <div class="bg-bg-secondary border border-border overflow-hidden">
          <div class="aspect-video overflow-hidden">
            <img
              src="/images/services/rapid-prototyping.jpg"
              alt="Rapid Prototyping Service"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
          <div class="p-8">
            <div class="flex items-start gap-6">
              <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <div class="flex-1">
                <h2 class="text-xl font-bold mb-3">Rapid Prototyping</h2>
                <p class="text-text-secondary mb-4">Fast-turn prototyping for design validation and testing.</p>
                <ul class="space-y-2 text-sm text-text-secondary">
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>48-hour prototype turnaround</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>Manual assembly for complex configurations</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>Quick design iterations and modifications</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>Full electrical and mechanical testing</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Service 3 -->
        <div class="bg-bg-secondary border border-border overflow-hidden">
          <div class="aspect-video overflow-hidden">
            <img
              src="/images/services/global-shipping.jpg"
              alt="Global Shipping and Volume Production"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
          <div class="p-8">
            <div class="flex items-start gap-6">
              <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              </div>
              <div class="flex-1">
                <h2 class="text-xl font-bold mb-3">Volume Production</h2>
                <p class="text-text-secondary mb-4">Scalable manufacturing with consistent quality control.</p>
                <ul class="space-y-2 text-sm text-text-secondary">
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>Automated assembly for high-volume production</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>100% continuity testing on all assemblies</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>Statistical process control and monitoring</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>Flexible scheduling and inventory management</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Service 4 -->
        <div class="bg-bg-secondary border border-border overflow-hidden">
          <div class="aspect-video overflow-hidden">
            <img
              src="/images/services/prototype-samples.jpg"
              alt="Quality Testing and Prototype Samples"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
          <div class="p-8">
            <div class="flex items-start gap-6">
              <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="flex-1">
                <h2 class="text-xl font-bold mb-3">Quality Assurance</h2>
                <p class="text-text-secondary mb-4">Comprehensive testing and inspection processes.</p>
                <ul class="space-y-2 text-sm text-text-secondary">
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>100% electrical continuity testing</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>Hi-pot and insulation resistance testing</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>Pull test verification for crimp terminations</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-accent-cyan">▸</span>
                    <span>Visual inspection and dimensional verification</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Service 5 -->
        <div class="bg-bg-secondary border border-border p-8">
          <div class="flex items-start gap-6">
            <div class="w-16 h-16 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
              </svg>
            </div>
            <div>
              <h2 class="text-xl font-bold mb-3">JST/Molex/TE Equivalents</h2>
              <p class="text-text-secondary mb-4">Cost-effective compatible solutions without compromising quality.</p>
              <ul class="space-y-2 text-sm text-text-secondary">
                <li class="flex items-start gap-2">
                  <span class="text-accent-cyan">▸</span>
                  <span>Full JST PH/XH/EH series compatibility</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-accent-cyan">▸</span>
                  <span>Molex Micro-Fit, PicoBlade equivalents</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-accent-cyan">▸</span>
                  <span>TE Connectivity AMP series alternatives</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-accent-cyan">▸</span>
                  <span>Custom connector development</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA -->
      <div class="bg-bg-secondary border border-accent-cyan p-8 text-center">
        <h2 class="text-2xl font-bold mb-4">Need a Custom Solution?</h2>
        <p class="text-text-secondary mb-6">Share your requirements and we'll provide a comprehensive proposal within 24 hours.</p>
        <a href="/contact" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300">
          Request Quote
        </a>
      </div>
    </div>
  </section>
</MainLayout>
