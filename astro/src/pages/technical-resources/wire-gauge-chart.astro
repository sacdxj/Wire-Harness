---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Technical Resources', href: '/technical-resources' },
  { name: 'Wire Gauge Chart', href: '/technical-resources/wire-gauge-chart' }
];

const wireData = [
  { awg: 32, mm2: 0.032, mm: 0.20, current: 0.13, application: 'Ultra-fine pitch (SH/GH series)' },
  { awg: 30, mm2: 0.051, mm: 0.25, current: 0.21, application: 'Fine pitch (PH/GH series)' },
  { awg: 28, mm2: 0.081, mm: 0.32, current: 0.34, application: 'Small signal (PH/XH series)' },
  { awg: 26, mm2: 0.128, mm: 0.40, current: 0.54, application: 'General purpose (PH/XH/EH)' },
  { awg: 24, mm2: 0.205, mm: 0.51, current: 0.86, application: 'Power applications (XH/EH/VH)' },
  { awg: 22, mm2: 0.324, mm: 0.64, current: 1.2, application: 'Higher current (EH/VH series)' },
  { awg: 20, mm2: 0.519, mm: 0.81, current: 1.7, application: 'Power connectors (VH/ZH series)' },
  { awg: 18, mm2: 0.823, mm: 1.02, current: 2.5, application: 'High current applications' },
  { awg: 16, mm2: 1.31, mm: 1.29, current: 3.7, application: 'Heavy duty power' },
  { awg: 14, mm2: 2.08, mm: 1.63, current: 5.5, application: 'Maximum current capacity' }
];
---

<MainLayout
  title="Wire Gauge Chart | AWG Reference for Terminal Wire Assemblies"
  description="Complete AWG wire gauge reference chart with metric equivalents, current ratings, and recommended applications for terminal wire assemblies."
>
  <Breadcrumb items={breadcrumbItems} />

  <section class="px-4 py-16">
    <div class="max-w-7xl mx-auto">
      <div class="mb-12">
        <p class="font-mono text-xs text-accent-cyan uppercase tracking-widest mb-4">Reference Guide</p>
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">Wire Gauge Chart</h1>
        <p class="text-lg text-text-secondary max-w-3xl">
          American Wire Gauge (AWG) to metric conversion chart with current ratings and recommended applications for terminal wire assemblies.
        </p>
      </div>

      <!-- Quick Summary -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="bg-bg-secondary border border-border p-6">
          <div class="font-mono text-xs text-accent-amber uppercase tracking-wider mb-2">Wire Range</div>
          <div class="text-2xl font-bold">AWG 32-14</div>
          <div class="text-text-secondary text-sm mt-1">0.032mm² - 2.08mm²</div>
        </div>
        <div class="bg-bg-secondary border border-border p-6">
          <div class="font-mono text-xs text-accent-amber uppercase tracking-wider mb-2">Current Range</div>
          <div class="text-2xl font-bold">0.13A - 5.5A</div>
          <div class="text-text-secondary text-sm mt-1">Signal to power applications</div>
        </div>
        <div class="bg-bg-secondary border border-border p-6">
          <div class="font-mono text-xs text-accent-amber uppercase tracking-wider mb-2">Certification</div>
          <div class="text-2xl font-bold">UL Listed</div>
          <div class="text-text-secondary text-sm mt-1">AWM styles available</div>
        </div>
      </div>

      <!-- Wire Gauge Table -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold mb-6">AWG to Metric Conversion</h2>
        <div class="overflow-x-auto">
          <table class="w-full bg-bg-secondary border border-border">
            <thead>
              <tr class="border-b border-border">
                <th class="px-4 py-3 text-left font-mono text-xs text-accent-cyan uppercase tracking-wider">AWG</th>
                <th class="px-4 py-3 text-left font-mono text-xs text-accent-cyan uppercase tracking-wider">Cross-Section</th>
                <th class="px-4 py-3 text-left font-mono text-xs text-accent-cyan uppercase tracking-wider">Diameter</th>
                <th class="px-4 py-3 text-left font-mono text-xs text-accent-cyan uppercase tracking-wider">Current Rating</th>
                <th class="px-4 py-3 text-left font-mono text-xs text-accent-cyan uppercase tracking-wider">Application</th>
              </tr>
            </thead>
            <tbody>
              {wireData.map(wire => (
                <tr class="border-b border-border hover:bg-bg-tertiary">
                  <td class="px-4 py-3 font-mono font-bold">{wire.awg}</td>
                  <td class="px-4 py-3">
                    <span class="font-mono">{wire.mm2}mm²</span>
                  </td>
                  <td class="px-4 py-3">
                    <span class="font-mono">Ø{wire.mm}mm</span>
                  </td>
                  <td class="px-4 py-3">
                    <span class="font-mono text-accent-cyan">{wire.current}A</span>
                  </td>
                  <td class="px-4 py-3 text-sm text-text-secondary">{wire.application}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>

      <!-- Application Guidelines -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold mb-6">Application Guidelines by Connector Series</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-mono text-sm font-bold text-accent-cyan uppercase tracking-wider mb-3">Micro-Pitch (SH/GH/ZH)</h3>
            <ul class="space-y-2 text-sm text-text-secondary">
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan">▸</span>
                <span>Pitch: 1.0mm - 1.5mm</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan">▸</span>
                <span>Recommended: AWG 32-28</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan">▸</span>
                <span>Applications: Compact electronics, wearables</span>
              </li>
            </ul>
          </div>

          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-mono text-sm font-bold text-accent-cyan uppercase tracking-wider mb-3">Standard Pitch (PH/XH)</h3>
            <ul class="space-y-2 text-sm text-text-secondary">
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan">▸</span>
                <span>Pitch: 2.0mm - 2.5mm</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan">▸</span>
                <span>Recommended: AWG 28-24</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan">▸</span>
                <span>Applications: Consumer electronics, LED lighting</span>
              </li>
            </ul>
          </div>

          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-mono text-sm font-bold text-accent-cyan uppercase tracking-wider mb-3">Power Pitch (EH/VH)</h3>
            <ul class="space-y-2 text-sm text-text-secondary">
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan">▸</span>
                <span>Pitch: 2.5mm - 3.96mm</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan">▸</span>
                <span>Recommended: AWG 24-20</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan">▸</span>
                <span>Applications: Industrial control, power supply</span>
              </li>
            </ul>
          </div>

          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-mono text-sm font-bold text-accent-cyan uppercase tracking-wider mb-3">High Current</h3>
            <ul class="space-y-2 text-sm text-text-secondary">
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan">▸</span>
                <span>Pitch: 3.96mm+</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan">▸</span>
                <span>Recommended: AWG 18-14</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan">▸</span>
                <span>Applications: Motors, transformers, high power</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Current Rating Notes -->
      <div class="bg-bg-secondary border border-accent-amber/30 p-6">
        <h3 class="font-mono text-sm font-bold text-accent-amber uppercase tracking-wider mb-3">⚠ Current Rating Notes</h3>
        <ul class="space-y-2 text-sm text-text-secondary">
          <li>Current ratings are for single conductor in free air at 20°C</li>
          <li>Derating required for multiple conductors in bundle or confined spaces</li>
          <li>Temperature rating of insulation affects current capacity</li>
          <li>Consult UL standards and specific connector specifications for your application</li>
        </ul>
      </div>

      <!-- CTA -->
      <div class="mt-12 text-center">
        <p class="text-text-secondary mb-6">Need help selecting the right wire gauge for your application?</p>
        <a href="/contact" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300">
          Consult with Engineers
        </a>
      </div>
    </div>
  </section>
</MainLayout>
