---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Blog', href: '/blog' }
];
---

<MainLayout
  title="Technical Blog | Wire Harness & Connector Insights"
  description="Expert articles on wire harness design, connector selection, manufacturing best practices, and industry insights from HARNESS+LAB engineers."
>
  <Breadcrumb items={breadcrumbItems} />

  <section class="px-4 py-16">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-12">
        <p class="font-mono text-xs text-accent-cyan uppercase tracking-widest mb-4">Knowledge Base</p>
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">Technical Blog</h1>
        <p class="text-lg text-text-secondary max-w-2xl mx-auto">
          Insights, guides, and best practices from our engineering team on wire harness design, connector selection, and manufacturing.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedPosts.map((post) => (
          <a
            href={`/blog/${post.slug}`}
            class="group block bg-bg-secondary border border-border overflow-hidden transition-all duration-300 hover:border-accent-cyan hover:-translate-y-1"
          >
            {post.data.heroImage && (
              <div class="aspect-video overflow-hidden bg-bg-tertiary">
                <img
                  src={post.data.heroImage}
                  alt={post.data.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              </div>
            )}

            <div class="p-6">
              {post.data.category && (
                <span class="inline-block font-mono text-[0.6rem] uppercase tracking-wider text-accent-cyan bg-accent-cyan/10 px-2 py-1 mb-3">
                  {post.data.category}
                </span>
              )}

              <h2 class="text-xl font-bold mb-3 group-hover:text-accent-cyan transition-colors line-clamp-2">
                {post.data.title}
              </h2>

              <p class="text-text-secondary text-sm mb-4 line-clamp-3">
                {post.data.description}
              </p>

              <div class="flex items-center justify-between font-mono text-xs text-text-muted">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
                <span class="group-hover:text-accent-cyan transition-colors">Read more â†’</span>
              </div>
            </div>
          </a>
        ))}
      </div>

      {sortedPosts.length === 0 && (
        <div class="text-center py-20">
          <p class="text-text-secondary text-lg">No articles published yet.</p>
        </div>
      )}
    </div>
  </section>
</MainLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
