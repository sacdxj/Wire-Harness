---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Blog', href: '/blog' },
  { name: post.data.title, href: `/blog/${post.slug}` }
];

// Structured data for blog post
const structuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": post.data.title,
  "description": post.data.description,
  "datePublished": post.data.pubDate.toISOString(),
  "dateModified": post.data.updatedDate?.toISOString() || post.data.pubDate.toISOString(),
  "author": {
    "@type": "Organization",
    "name": "HARNESS+LAB"
  },
  "publisher": {
    "@type": "Organization",
    "name": "HARNESS+LAB",
    "logo": {
      "@type": "ImageObject",
      "url": new URL('/logo.png', Astro.url).href
    }
  }
};
---

<MainLayout
  title={post.data.title}
  description={post.data.description}
  image={post.data.heroImage}
  type="article"
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <Breadcrumb items={breadcrumbItems} />

  <article class="px-4 py-12">
    <div class="max-w-4xl mx-auto">
      <!-- Article Header -->
      <header class="mb-12">
        {post.data.category && (
          <span class="inline-block font-mono text-xs uppercase tracking-wider text-accent-cyan bg-accent-cyan/10 px-3 py-1 mb-4">
            {post.data.category}
          </span>
        )}

        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-6">
          {post.data.title}
        </h1>

        <p class="text-xl text-text-secondary mb-8">
          {post.data.description}
        </p>

        <div class="flex flex-wrap items-center gap-6 font-mono text-sm text-text-muted border-y border-border py-4">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span>{post.data.author}</span>
          </div>

          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={post.data.pubDate.toISOString()}>
              {post.data.pubDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </div>

          {post.data.updatedDate && (
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
              <span>
                Updated {post.data.updatedDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                })}
              </span>
            </div>
          )}
        </div>
      </header>

      <!-- Hero Image -->
      {post.data.heroImage && (
        <div class="mb-12 aspect-video overflow-hidden bg-bg-tertiary rounded-lg">
          <img
            src={post.data.heroImage}
            alt={post.data.title}
            class="w-full h-full object-cover"
            loading="eager"
          />
        </div>
      )}

      <!-- Article Content -->
      <div class="prose prose-lg prose-invert max-w-none">
        <Content />
      </div>

      <!-- Article Footer -->
      <footer class="mt-16 pt-8 border-t border-border">
        <div class="bg-bg-secondary border border-accent-cyan p-8 text-center">
          <h3 class="text-2xl font-bold mb-4">Need Help With Your Project?</h3>
          <p class="text-text-secondary mb-6">
            Our engineering team is ready to assist with your wire harness requirements.
          </p>
          <a
            href="/contact"
            class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300"
          >
            Get a Quote
          </a>
        </div>
      </footer>
    </div>
  </article>
</MainLayout>

<style>
  .prose {
    --tw-prose-body: theme('colors.text.secondary');
    --tw-prose-headings: theme('colors.text.primary');
    --tw-prose-links: theme('colors.accent.cyan');
    --tw-prose-bold: theme('colors.text.primary');
    --tw-prose-code: theme('colors.accent.amber');
    --tw-prose-pre-code: theme('colors.text.primary');
    --tw-prose-pre-bg: theme('colors.bg.tertiary');
    --tw-prose-quotes: theme('colors.text.secondary');
    --tw-prose-hr: theme('colors.border.DEFAULT');
    --tw-prose-hr-border-color: theme('colors.border.DEFAULT');
  }

  .prose h2 {
    font-size: 1.875rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    letter-spacing: -0.025em;
  }

  .prose h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }

  .prose ul {
    list-style-type: none;
    padding-left: 0;
  }

  .prose ul li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .prose ul li::before {
    content: 'â–¸';
    position: absolute;
    left: 0;
    color: theme('colors.accent.cyan');
  }

  .prose a {
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose a:hover {
    color: theme('colors.accent.green');
  }

  .prose code {
    font-family: 'JetBrains Mono', monospace;
    background-color: theme('colors.bg.tertiary');
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .prose pre {
    background-color: theme('colors.bg.tertiary');
    border: 1px solid theme('colors.border.DEFAULT');
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
  }

  .prose pre code {
    background-color: transparent;
    padding: 0;
  }

  .prose blockquote {
    border-left: 4px solid theme('colors.accent.cyan');
    padding-left: 1rem;
    font-style: italic;
    color: theme('colors.text.secondary');
  }

  .prose img {
    border-radius: 0.5rem;
    margin: 2rem 0;
  }

  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }

  .prose th,
  .prose td {
    border: 1px solid theme('colors.border.DEFAULT');
    padding: 0.75rem;
    text-align: left;
  }

  .prose th {
    background-color: theme('colors.bg.tertiary');
    font-weight: 600;
  }
</style>
