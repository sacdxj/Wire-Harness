    "@type": "WebSite",
    "name": "Trycay",
    "url": Astro.site,
    "description": "ISO 9001 certified OEM wire harness manufacturer specializing in custom terminal wire assemblies and connector solutions",
    "potentialAction": {
      "@type": "SearchAction",
      "target": {
        "@type": "EntryPoint",
        "urlTemplate": "https://trycay.com/search?q={search_term_string}"
      },
      "query-input": "required name=search_term_string"
    }
  })} />

