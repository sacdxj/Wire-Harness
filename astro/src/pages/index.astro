      "@type": "PostalAddress",
      "addressCountry": "CN",
      "addressRegion": "Guangdong"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "contactType": "sales",
      "email": "engineering@harnesslab.com",
      "availableLanguage": ["English", "Chinese"]
    },
    "sameAs": [
      "https://www.linkedin.com/company/harnesslab"
    ],
    "areaServed": "Worldwide",
    "foundingDate": "2009",
    "aggregateRating": {
      "@type": "AggregateRating",
