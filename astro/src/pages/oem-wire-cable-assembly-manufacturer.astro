---
import MainLayout from '../layouts/MainLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'OEM Manufacturing', href: '/oem-wire-cable-assembly-manufacturer' }
];
---

<MainLayout
  title="OEM Wire Cable Assembly Manufacturer | Factory-Direct Custom Solutions"
  description="ISO 9001 certified OEM wire cable assembly manufacturer. Factory-direct custom wire harnesses for global brands. 30-50% cost savings, 48-hour prototyping, volume production capacity."
>
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Trycay - OEM Wire Cable Assembly Manufacturer",
    "url": "https://your-wire-harness-factory.com",
    "description": "ISO 9001 certified OEM wire cable assembly manufacturer providing custom wire harness solutions to global brands",
    "address": {
      "@type": "PostalAddress",
      "addressCountry": "CN"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "contactType": "sales",
      "email": "engineering@harnesslab.com"
    }
  })} />

  <Breadcrumb items={breadcrumbItems} />

  <!-- Hero Section - Trust & Conversion -->
  <section class="relative bg-bg-secondary border-b border-accent-cyan">
    <div class="max-w-7xl mx-auto px-4 py-20">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="flex items-center gap-3 mb-6">
            <span class="font-mono text-xs text-accent-cyan uppercase tracking-widest">ISO 9001:2015 Certified</span>
            <span class="w-px h-4 bg-border"></span>
            <span class="font-mono text-xs text-accent-green uppercase tracking-widest">Factory Direct</span>
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6">
            OEM Wire Cable Assembly <span class="text-accent-cyan">Manufacturer</span>
          </h1>
          <p class="text-xl text-text-secondary leading-relaxed mb-8">
            Partner with a certified manufacturer for custom wire harness solutions. Save 30-50% compared to branded alternatives while maintaining quality and reliability.
          </p>

          <!-- Trust Metrics -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
            <div>
              <div class="font-mono text-3xl font-bold text-accent-green mb-1">15+</div>
              <div class="text-text-muted text-sm">Years Experience</div>
            </div>
            <div>
              <div class="font-mono text-3xl font-bold text-accent-green mb-1">5M+</div>
              <div class="text-text-muted text-sm">Monthly Capacity</div>
            </div>
            <div>
              <div class="font-mono text-3xl font-bold text-accent-green mb-1">100%</div>
              <div class="text-text-muted text-sm">Quality Testing</div>
            </div>
            <div>
              <div class="font-mono text-3xl font-bold text-accent-green mb-1">48h</div>
              <div class="text-text-muted text-sm">Prototyping</div>
            </div>
          </div>

          <!-- Primary CTA -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300 text-center">
              Get OEM Quote
            </a>
            <a href="/factory" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-accent-cyan border border-accent-cyan hover:bg-accent-cyan/10 transition-all duration-300 text-center">
              View Our Factory
            </a>
          </div>
        </div>

        <!-- Trust Badges -->
        <div class="space-y-6">
          <div class="bg-bg-primary border border-border p-8">
            <h3 class="font-bold text-lg mb-6 text-center">Certified Quality</h3>
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-bg-secondary border border-accent-green/30 p-4 text-center">
                <div class="font-mono text-sm font-bold text-accent-green mb-1">ISO 9001:2015</div>
                <div class="text-text-muted text-xs">Quality System</div>
              </div>
              <div class="bg-bg-secondary border border-accent-green/30 p-4 text-center">
                <div class="font-mono text-sm font-bold text-accent-green mb-1">UL Certified</div>
                <div class="text-text-muted text-xs">Safety Standards</div>
              </div>
              <div class="bg-bg-secondary border border-accent-green/30 p-4 text-center">
                <div class="font-mono text-sm font-bold text-accent-green mb-1">RoHS</div>
                <div class="text-text-muted text-xs">Environment</div>
              </div>
              <div class="bg-bg-secondary border border-accent-green/30 p-4 text-center">
                <div class="font-mono text-sm font-bold text-accent-green mb-1">REACH</div>
                <div class="text-text-muted text-xs">Compliance</div>
              </div>
            </div>
          </div>

          <div class="bg-accent-cyan/10 border border-accent-cyan/30 p-6">
            <h3 class="font-bold mb-3">Why OEMs Choose Us</h3>
            <ul class="space-y-2 text-sm text-text-secondary">
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan mt-0.5">✓</span>
                <span>Direct factory pricing - no middlemen</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan mt-0.5">✓</span>
                <span>Engineering support from prototype to production</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan mt-0.5">✓</span>
                <span>Flexible scheduling and inventory management</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-accent-cyan mt-0.5">✓</span>
                <span>Consistent quality with 100% testing</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="px-4 py-16">
    <div class="max-w-5xl mx-auto">

      <!-- What We Manufacture -->
      <section class="mb-20">
        <h2 class="text-3xl font-bold mb-8 text-center">Custom Wire Harness Solutions We Manufacture</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-bg-secondary border border-border p-6">
            <div class="w-12 h-12 bg-accent-cyan/10 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="font-bold text-lg mb-2">Pre-Crimped Wire Assemblies</h3>
            <p class="text-text-secondary text-sm mb-4">Ready-to-use wire leads with connectors. High-volume production for OEM applications.</p>
            <a href="/products/pre-crimped-wire-assembly" class="text-accent-cyan font-mono text-sm hover:underline">Learn More →</a>
          </div>

          <div class="bg-bg-secondary border border-border p-6">
            <div class="w-12 h-12 bg-accent-cyan/10 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
              </svg>
            </div>
            <h3 class="font-bold text-lg mb-2">Wire-to-Board Assemblies</h3>
            <p class="text-text-secondary text-sm mb-4">PCB connectors with wire harnesses for internal device connections.</p>
            <a href="/products/wire-to-board-cable-assembly" class="text-accent-cyan font-mono text-sm hover:underline">Learn More →</a>
          </div>

          <div class="bg-bg-secondary border border-border p-6">
            <div class="w-12 h-12 bg-accent-cyan/10 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
              </svg>
            </div>
            <h3 class="font-bold text-lg mb-2">Wire-to-Wire Assemblies</h3>
            <p class="text-text-secondary text-sm mb-4">Interconnecting harnesses for equipment and system integration.</p>
            <a href="/products/wire-to-wire-cable-assembly" class="text-accent-cyan font-mono text-sm hover:underline">Learn More →</a>
          </div>
        </div>
      </section>

      <!-- OEM Advantages -->
      <section class="mb-20">
        <h2 class="text-3xl font-bold mb-8 text-center">OEM Partnership Advantages</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-green/10 border border-accent-green/30 flex items-center justify-center text-accent-green">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg mb-2">30-50% Cost Savings</h3>
              <p class="text-text-secondary text-sm">Factory-direct pricing eliminates distributor margins. Competitive unit costs for volume production without compromising quality.</p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-green/10 border border-accent-green/30 flex items-center justify-center text-accent-green">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg mb-2">Rapid Response</h3>
              <p class="text-text-secondary text-sm">48-hour quoting and 48-hour prototyping. Quick turnaround for urgent projects and tight product launch schedules.</p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-green/10 border border-accent-green/30 flex items-center justify-center text-accent-green">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg mb-2">Quality Guaranteed</h3>
              <p class="text-text-secondary text-sm">ISO 9001 certified processes with 100% electrical testing. Consistent quality from prototype through volume production.</p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-green/10 border border-accent-green/30 flex items-center justify-center text-accent-green">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg mb-2">Production Capacity</h3>
              <p class="text-text-secondary text-sm">8,000m² facility with 150+ skilled workers. 5M+ pieces monthly capacity to support your growth.</p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-green/10 border border-accent-green/30 flex items-center justify-center text-accent-green">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg mb-2">Global Compliance</h3>
              <p class="text-text-secondary text-sm">UL, RoHS, REACH certified materials and processes. Products compliant with international safety and environmental standards.</p>
            </div>
          </div>

          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-green/10 border border-accent-green/30 flex items-center justify-center text-accent-green">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg mb-2">Full Customization</h3>
              <p class="text-text-secondary text-sm">Complete design flexibility from connector selection to assembly configuration. Engineering support throughout product development.</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Production Capabilities -->
      <section class="mb-20">
        <h2 class="text-3xl font-bold mb-8 text-center">Production Capabilities</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-mono text-sm font-bold text-accent-cyan mb-2">PROTOTYPE</h3>
            <div class="text-2xl font-bold mb-2">1-100 Units</div>
            <p class="text-text-secondary text-sm mb-4">Quick-turn manual assembly for design validation and testing.</p>
            <ul class="space-y-1 text-xs text-text-muted">
              <li>• 48-72 hour turnaround</li>
              <li>• Design assistance</li>
              <li>• Flexible iterations</li>
            </ul>
          </div>

          <div class="bg-bg-secondary border border-accent-cyan p-6">
            <h3 class="font-mono text-sm font-bold text-accent-cyan mb-2">PILOT RUN</h3>
            <div class="text-2xl font-bold mb-2">100-10K Units</div>
            <p class="text-text-secondary text-sm mb-4">Semi-automated production for pre-production builds and initial market entry.</p>
            <ul class="space-y-1 text-xs text-text-muted">
              <li>• 1-2 week lead time</li>
              <li>• Cost optimization</li>
              <li>• Quality validation</li>
            </ul>
          </div>

          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-mono text-sm font-bold text-accent-cyan mb-2">VOLUME PRODUCTION</h3>
            <div class="text-2xl font-bold mb-2">10K+ Units</div>
            <p class="text-text-secondary text-sm mb-4">Fully automated production with best pricing and consistent quality.</p>
            <ul class="space-y-1 text-xs text-text-muted">
              <li>• 2-4 week lead time</li>
              <li>• Lowest unit cost</li>
              <li>• Production scheduling</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Industries We Serve -->
      <section class="mb-20">
        <h2 class="text-3xl font-bold mb-8 text-center">Industries We Serve</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="bg-bg-secondary border border-border p-4 text-center">
            <div class="font-bold text-sm mb-1">Consumer Electronics</div>
            <div class="text-text-muted text-xs">Smartphones, wearables, IoT</div>
          </div>
          <div class="bg-bg-secondary border border-border p-4 text-center">
            <div class="font-bold text-sm mb-1">Industrial Automation</div>
            <div class="text-text-muted text-xs">PLC, sensors, robotics</div>
          </div>
          <div class="bg-bg-secondary border border-border p-4 text-center">
            <div class="font-bold text-sm mb-1">LED Lighting</div>
            <div class="text-text-muted text-xs">Fixtures, drivers, strips</div>
          </div>
          <div class="bg-bg-secondary border border-border p-4 text-center">
            <div class="font-bold text-sm mb-1">Automotive</div>
            <div class="text-text-muted text-xs">EV, controls, sensors</div>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="bg-bg-secondary border border-accent-cyan p-8 text-center">
        <h2 class="text-3xl font-bold mb-4">Ready to Start Your OEM Project?</h2>
        <p class="text-text-secondary mb-6 max-w-2xl mx-auto">
          Get a competitive quote within 24 hours. Share your specifications, drawings, or BOM for a detailed proposal with engineering support.
        </p>
        <a href="/contact" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300">
          Request OEM Quote
        </a>
      </section>
    </div>
  </section>
</MainLayout>
