---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Products', href: '/products' }
];

// Pillar Product Pages (SEO-optimized capability pages)
const pillarProducts = [
  {
    title: 'JST Terminal Wire Assemblies',
    description: 'Complete JST series support: PH, XH, SH, GH, VH, EH. Pitch 1.0-3.96mm, current 1-7A. Custom wire gauge, length, pin count.',
    specs: ['PH/XH/SH/GH/VH/EH', '1.0-3.96mm pitch', '1-7A rating', 'AWG 32-14'],
    href: '/products/jst-terminal-wire-assembly',
    featured: true
  },
  {
    title: 'Molex Wire-to-Board Assemblies',
    description: 'Molex KK, Micro-Fit 3.0, Mini-Fit Jr., PicoBlade series. Pitch 1.25-4.45mm, current 1-9A. Industrial grade.',
    specs: ['KK/Micro-Fit/Mini-Fit', '1.25-4.45mm pitch', '1-9A rating', 'AWG 32-14'],
    href: '/products/molex-wire-to-board-assembly',
    featured: true
  },
  {
    title: 'DuPont Wire Assemblies',
    description: 'DuPont 2.54mm compatible assemblies. Pre-crimped leads, custom configurations. For Arduino, Raspberry Pi, prototyping.',
    specs: ['2.54mm standard', '1-5A rating', 'AWG 30-18', 'Custom pins'],
    href: '/products/dupont-terminal-wire-assembly',
    featured: true
  }
];
---

<MainLayout
  title="Terminal Wire Assembly Products | Pre-Crimped Leads & Cable Assemblies"
  description="Complete catalog of terminal wire assemblies by type: pre-crimped leads, wire-to-board, wire-to-wire, and ribbon cable assemblies. JST/Molex compatible."
>
  <Breadcrumb items={breadcrumbItems} />

  <section class="px-4 py-8">
    <div class="max-w-7xl mx-auto">
      <div class="mb-12">
        <p class="font-mono text-xs text-accent-cyan uppercase tracking-widest mb-3">Terminal Wire Assembly Products</p>
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">Custom Wire Assemblies</h1>
        <p class="text-lg text-text-secondary max-w-3xl">
          Factory-direct terminal wire assemblies manufactured to your specifications. JST, Molex, and DuPont compatible connectors with custom wire gauge, length, and pin count configurations.
        </p>
      </div>

      <!-- Pillar Product Pages -->
      <div class="mb-16">
        <div class="mb-6">
          <h2 class="text-2xl md:text-3xl font-bold tracking-tight">By Brand Series</h2>
          <p class="text-text-secondary mt-2">Complete connector series support with custom manufacturing capabilities</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          {pillarProducts.map(product => (
            <a
              href={product.href}
              class="group block bg-bg-secondary border-2 border-border hover:border-accent-cyan transition-all duration-300 hover:-translate-y-1"
            >
              <div class="p-8">
                <h3 class="text-xl font-bold group-hover:text-accent-cyan transition-colors mb-4">
                  {product.title}
                </h3>
                <p class="text-text-secondary text-sm mb-6 leading-relaxed">
                  {product.description}
                </p>

                <div class="space-y-2 mb-6">
                  {product.specs.map(spec => (
                    <div class="flex items-center text-sm">
                      <span class="w-1.5 h-1.5 bg-accent-cyan rounded-full mr-2"></span>
                      <span class="font-mono text-text-secondary">{spec}</span>
                    </div>
                  ))}
                </div>

                <div class="flex items-center text-accent-cyan font-mono text-sm font-bold">
                  <span>View Products</span>
                  <span class="ml-2 group-hover:translate-x-1 transition-transform">â†’</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Custom Assembly CTA -->
      <div class="mt-12 bg-bg-secondary border border-accent-amber/30 p-8 text-center">
        <h2 class="text-2xl font-bold mb-4">Need Custom Assembly?</h2>
        <p class="text-text-secondary mb-6 max-w-2xl mx-auto">
          Don't see what you need? We can custom-build any terminal wire assembly to your exact specifications. Upload your drawing for a quote.
        </p>
        <a href="/contact" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300">
          Upload Drawing for Quote
        </a>
      </div>

      <!-- Quick Specs Reference -->
      <div class="mt-12">
        <h2 class="text-2xl font-bold mb-6">Quick Specifications Reference</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <div class="bg-bg-secondary border border-border p-6">
            <div class="font-mono text-xs text-accent-amber uppercase tracking-wider mb-2">Pitch Range</div>
            <div class="text-2xl font-bold">0.8-2.54mm</div>
            <div class="text-text-secondary text-sm mt-1">Micro to standard</div>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <div class="font-mono text-xs text-accent-amber uppercase tracking-wider mb-2">Wire Gauge</div>
            <div class="text-2xl font-bold">AWG 32-14</div>
            <div class="text-text-secondary text-sm mt-1">UL-certified</div>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <div class="font-mono text-xs text-accent-amber uppercase tracking-wider mb-2">Positions</div>
            <div class="text-2xl font-bold">2-24 pins</div>
            <div class="text-text-secondary text-sm mt-1">Custom available</div>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <div class="font-mono text-xs text-accent-amber uppercase tracking-wider mb-2">MOQ</div>
            <div class="text-2xl font-bold">100 pcs</div>
            <div class="text-text-secondary text-sm mt-1">Prototypes welcome</div>
          </div>
        </div>
      </div>

      <!-- Brand Compatibility -->
      <div class="mt-12">
        <h2 class="text-2xl font-bold mb-6">Compatible Connector Brands</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-bg-secondary border border-border p-6 text-center">
            <h3 class="font-mono text-lg font-bold text-accent-cyan mb-2">JST Series</h3>
            <p class="text-text-secondary text-sm">
              SH, GH, PH, XH, EH, VH, ZH equivalents
            </p>
          </div>
          <div class="bg-bg-secondary border border-border p-6 text-center">
            <h3 class="font-mono text-lg font-bold text-accent-cyan mb-2">Molex</h3>
            <p class="text-text-secondary text-sm">
              Micro-Fit, PicoBlade, KK, Mini-Fit equivalents
            </p>
          </div>
          <div class="bg-bg-secondary border border-border p-6 text-center">
            <h3 class="font-mono text-lg font-bold text-accent-cyan mb-2">TE Connectivity</h3>
            <p class="text-text-secondary text-sm">
              AMP, Econoseal, and other series equivalents
            </p>
          </div>
        </div>
        <div class="mt-6 text-center">
          <a href="/compatibility" class="inline-block px-6 py-3 font-mono text-sm font-bold uppercase tracking-widest text-accent-cyan border border-accent-cyan hover:bg-accent-cyan/10 transition-all duration-300">
            View Full Compatibility Guide
          </a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
