---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Products', href: '/products' }
];

// Capability-based Assemblies (3 Pillars)
const capabilityAssemblies = [
  {
    title: 'Pre-Crimped Wire Assemblies',
    description: 'Ready-to-use wire leads with pre-attached connectors',
    href: '/products/pre-crimped-wire-assembly'
  },
  {
    title: 'Wire-to-Board Cable Assemblies',
    description: 'PCB connectors with wire harnesses for device connections',
    href: '/products/wire-to-board-cable-assembly'
  },
  {
    title: 'Wire-to-Wire Cable Assemblies',
    description: 'Interconnecting harnesses for equipment and system integration',
    href: '/products/wire-to-wire-cable-assembly'
  }
];

// Brand Compatible Assemblies (5 Pillars)
const brandAssemblies = [
  {
    title: 'JST Compatible',
    description: 'PH, XH, EH, VH, ZH series equivalents',
    href: '/products/jst-compatible-wire-assembly'
  },
  {
    title: 'Molex Compatible',
    description: 'Micro-Fit, PicoBlade, Mini-Fit, KK series equivalents',
    href: '/products/molex-compatible-wire-assembly'
  },
  {
    title: 'TE Compatible',
    description: 'Econoseal, AMP MCP, AMPSEAL series equivalents',
    href: '/products/te-compatible-wire-assembly'
  },
  {
    title: 'DuPont Compatible',
    description: '2.54mm standard pitch compatible assemblies',
    href: '/products/dupont-compatible-wire-assembly'
  },
  {
    title: 'Hirose Compatible',
    description: 'DF, FH, ZH series and other popular equivalents',
    href: '/products/hirose-compatible-wire-assembly'
  }
];
---

<MainLayout
  title="Our Cable Assembly Solutions | Product Catalog"
  description="Browse our complete cable assembly solutions. Capability-based and brand-compatible wire harnesses manufactured to your specifications."
>
  <!-- Products Collection Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "Cable Assembly Solutions - Product Catalog",
    "description": "Complete wire harness solutions including capability-based assemblies and brand-compatible wire harnesses",
    "url": "https://trycay.com/products",
    "provider": {
      "@type": "Organization",
      "name": "Trycay",
      "url": "https://trycay.com"
    }
  })} />

  <Breadcrumb items={breadcrumbItems} />

  <section class="px-4 py-16">
    <div class="max-w-6xl mx-auto">

      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">
          Our Cable Assembly Solutions
        </h1>
        <p class="text-lg text-text-secondary max-w-2xl mx-auto">
          Browse our complete wire harness solutions by assembly type or connector compatibility.
        </p>
      </div>

      <!-- Capability-based Assemblies (3个) -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
          <span class="w-8 h-8 bg-accent-cyan/20 flex items-center justify-center text-accent-cyan text-sm font-mono">01</span>
          Capability-based Assemblies
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {capabilityAssemblies.map((item, index) => (
            <a
              href={item.href}
              class="group block bg-bg-secondary border border-border hover:border-accent-cyan transition-all duration-300 hover:-translate-y-1"
            >
              <div class="p-6 h-full flex flex-col">
                <div class="w-12 h-12 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center mb-4">
                  <svg class="w-6 h-6 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <h3 class="text-xl font-bold group-hover:text-accent-cyan transition-colors mb-2">
                  {item.title}
                </h3>
                <p class="text-text-secondary text-sm mb-4 flex-grow">
                  {item.description}
                </p>
                <div class="flex items-center text-accent-cyan font-mono text-xs font-bold">
                  <span>View Details</span>
                  <span class="ml-2 group-hover:translate-x-1 transition-transform">→</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- Brand Compatible Assemblies (5个) -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
          <span class="w-8 h-8 bg-accent-cyan/20 flex items-center justify-center text-accent-cyan text-sm font-mono">02</span>
          Brand Compatible Assemblies
        </h2>
        <p class="text-text-secondary mb-6">Cost-effective alternatives to major connector brands</p>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          {brandAssemblies.map((item, index) => (
            <a
              href={item.href}
              class="group block bg-bg-secondary border border-border hover:border-accent-cyan transition-all duration-300"
            >
              <div class="p-5">
                <h3 class="text-lg font-bold group-hover:text-accent-cyan transition-colors mb-1">
                  {item.title}
                </h3>
                <p class="text-text-secondary text-xs mb-0">
                  {item.description}
                </p>
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- Link to OEM Page -->
      <section class="bg-bg-secondary border border-accent-green/30 p-8 text-center">
        <h2 class="text-2xl font-bold mb-3">Need OEM Manufacturing Services?</h2>
        <p class="text-text-secondary mb-6 max-w-2xl mx-auto">
          Looking for a manufacturing partner for volume production or custom development?
        </p>
        <a href="/oem-wire-cable-assembly-manufacturer" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300">
          Learn About OEM Services
        </a>
      </section>

    </div>
  </section>
</MainLayout>
