---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Products', href: '/products' }
];

// Product categories with all products
const productCategories = [
  {
    title: 'Pre-Crimped Leads',
    description: 'Single or dual-end pre-crimped wires ready for your assembly process.',
    products: [
      { name: 'JST SH 1.0mm', pitch: '1.0mm', current: '1A', href: '/products/jst-sh-1-0mm-pre-crimped-leads' },
      { name: 'JST GH 1.25mm', pitch: '1.25mm', current: '1.5A', href: '/products/jst-gh-1-25mm-pre-crimped-leads' },
      { name: 'JST PH 2.0mm', pitch: '2.0mm', current: '2A', href: '/products/jst-ph-2-0mm-pre-crimped-leads' },
      { name: 'Molex PicoBlade 1.25mm', pitch: '1.25mm', current: '1A', href: '/products/molex-picoblade-1-25mm-pre-crimped-leads' },
      { name: 'Molex Micro-Fit 3.0mm', pitch: '3.0mm', current: '3A', href: '/products/molex-micro-fit-3-0mm-pre-crimped-leads' },
      { name: 'Dupont 2.54mm', pitch: '2.54mm', current: '3A', href: '/products/dupont-2-54mm-pre-crimped-leads' }
    ]
  },
  {
    title: 'Wire-to-Board Assemblies',
    description: 'Board connectors with crimped wires for PCB connection applications.',
    products: [
      { name: 'JST XH 2.5mm', pitch: '2.5mm', current: '3A', href: '/products/jst-xh-2-5mm-wire-to-board' },
      { name: 'JST VH 3.96mm', pitch: '3.96mm', current: '7A', href: '/products/jst-vh-3-96mm-wire-to-board' },
      { name: 'Molex KK 254', pitch: '2.54mm', current: '5A', href: '/products/molex-kk-254-wire-to-board' }
    ]
  },
  {
    title: 'Wire-to-Wire Assemblies',
    description: 'Male-to-female cable assemblies for modular connections.',
    products: [
      { name: 'JST PH 2.0mm', pitch: '2.0mm', current: '2A', href: '/products/jst-ph-2-0mm-wire-to-wire' },
      { name: 'Molex Mini-Fit 4.2mm', pitch: '4.2mm', current: '9A', href: '/products/molex-mini-fit-4-2mm-wire-to-wire' }
    ]
  },
  {
    title: 'Ribbon Cable Assemblies',
    description: 'High-density IDC ribbon cables for compact electronics.',
    products: [
      { name: 'JST VH 3.96mm Ribbon', pitch: '3.96mm', current: '7A', href: '/contact' },
      { name: 'Molex KK 254 Ribbon', pitch: '2.54mm', current: '5A', href: '/contact' },
      { name: 'Dupont 2.54mm Ribbon', pitch: '2.54mm', current: '3A', href: '/contact' }
    ]
  }
];
---

<MainLayout
  title="Terminal Wire Assembly Products | Pre-Crimped Leads & Cable Assemblies"
  description="Complete catalog of terminal wire assemblies by type: pre-crimped leads, wire-to-board, wire-to-wire, and ribbon cable assemblies. JST/Molex compatible."
>
  <Breadcrumb items={breadcrumbItems} />

  <section class="px-4 py-8">
    <div class="max-w-7xl mx-auto">
      <div class="mb-12">
        <p class="font-mono text-xs text-accent-cyan uppercase tracking-widest mb-3">Assembly Types</p>
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">Terminal Wire Assemblies</h1>
        <p class="text-lg text-text-secondary max-w-3xl">
          Browse our terminal wire assembly catalog by component type. All assemblies are 100% tested and available with JST, Molex, or TE compatible terminals.
        </p>
      </div>

      <!-- Product Categories -->
      {productCategories.map(category => (
        <div class="mb-16">
          <div class="mb-6">
            <p class="font-mono text-xs text-accent-cyan uppercase tracking-widest mb-2">{category.title}</p>
            <h2 class="text-2xl md:text-3xl font-bold tracking-tight">{category.title}</h2>
            <p class="text-text-secondary">{category.description}</p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {category.products.map(product => (
              <a
                href={product.href}
                class="group block bg-bg-secondary border border-border p-6 transition-all duration-300 hover:border-accent-cyan hover:-translate-y-1"
              >
                <div class="flex justify-between items-start mb-3">
                  <h3 class="text-lg font-bold group-hover:text-accent-cyan transition-colors">
                    {product.name}
                  </h3>
                  <span class="font-mono text-xs text-accent-cyan bg-accent-cyan/10 px-2 py-1">
                    {product.pitch}
                  </span>
                </div>
                <p class="text-text-secondary text-sm mb-3">
                  {product.current} rating
                </p>
                <div class="flex items-center text-accent-cyan font-mono text-sm">
                  <span>View Details</span>
                  <span class="ml-2 group-hover:translate-x-1 transition-transform">â†’</span>
                </div>
              </a>
            ))}
          </div>
        </div>
      ))}

      <!-- Custom Assembly CTA -->
      <div class="mt-12 bg-bg-secondary border border-accent-amber/30 p-8 text-center">
        <h2 class="text-2xl font-bold mb-4">Need Custom Assembly?</h2>
        <p class="text-text-secondary mb-6 max-w-2xl mx-auto">
          Don't see what you need? We can custom-build any terminal wire assembly to your exact specifications. Upload your drawing for a quote.
        </p>
        <a href="/contact" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300">
          Upload Drawing for Quote
        </a>
      </div>

      <!-- Quick Specs Reference -->
      <div class="mt-12">
        <h2 class="text-2xl font-bold mb-6">Quick Specifications Reference</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <div class="bg-bg-secondary border border-border p-6">
            <div class="font-mono text-xs text-accent-amber uppercase tracking-wider mb-2">Pitch Range</div>
            <div class="text-2xl font-bold">0.8-2.54mm</div>
            <div class="text-text-secondary text-sm mt-1">Micro to standard</div>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <div class="font-mono text-xs text-accent-amber uppercase tracking-wider mb-2">Wire Gauge</div>
            <div class="text-2xl font-bold">AWG 32-14</div>
            <div class="text-text-secondary text-sm mt-1">UL-certified</div>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <div class="font-mono text-xs text-accent-amber uppercase tracking-wider mb-2">Positions</div>
            <div class="text-2xl font-bold">2-24 pins</div>
            <div class="text-text-secondary text-sm mt-1">Custom available</div>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <div class="font-mono text-xs text-accent-amber uppercase tracking-wider mb-2">MOQ</div>
            <div class="text-2xl font-bold">100 pcs</div>
            <div class="text-text-secondary text-sm mt-1">Prototypes welcome</div>
          </div>
        </div>
      </div>

      <!-- Brand Compatibility -->
      <div class="mt-12">
        <h2 class="text-2xl font-bold mb-6">Compatible Connector Brands</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-bg-secondary border border-border p-6 text-center">
            <h3 class="font-mono text-lg font-bold text-accent-cyan mb-2">JST Series</h3>
            <p class="text-text-secondary text-sm">
              SH, GH, PH, XH, EH, VH, ZH equivalents
            </p>
          </div>
          <div class="bg-bg-secondary border border-border p-6 text-center">
            <h3 class="font-mono text-lg font-bold text-accent-cyan mb-2">Molex</h3>
            <p class="text-text-secondary text-sm">
              Micro-Fit, PicoBlade, KK, Mini-Fit equivalents
            </p>
          </div>
          <div class="bg-bg-secondary border border-border p-6 text-center">
            <h3 class="font-mono text-lg font-bold text-accent-cyan mb-2">TE Connectivity</h3>
            <p class="text-text-secondary text-sm">
              AMP, Econoseal, and other series equivalents
            </p>
          </div>
        </div>
        <div class="mt-6 text-center">
          <a href="/compatibility" class="inline-block px-6 py-3 font-mono text-sm font-bold uppercase tracking-widest text-accent-cyan border border-accent-cyan hover:bg-accent-cyan/10 transition-all duration-300">
            View Full Compatibility Guide
          </a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
