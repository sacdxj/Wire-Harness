---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Products', href: '/products' },
  { name: 'JST PH 2.0mm Pre-Crimped Leads', href: '/products/jst-ph-2-0mm-pre-crimped-leads' }
];

// Technical specifications
const specs = [
  { label: 'Pitch', value: '2.0mm', highlight: true },
  { label: 'Wire Gauge', value: 'AWG 28-24', highlight: false },
  { label: 'Current Rating', value: '2A', highlight: true },
  { label: 'Voltage Rating', value: '100V AC/DC', highlight: false },
  { label: 'Contact Material', value: 'Tin-plated Brass', highlight: false },
  { label: 'Housing Material', value: 'PA66 GF (UL94V-0)', highlight: false },
  { label: 'Termination', value: 'Crimp', highlight: false },
  { label: 'Operating Temp', value: '-25¬∞C to +85¬∞C', highlight: false }
];

const wireOptions = [
  { awg: '28', mm2: '0.081', current: '0.34A', application: 'Signal applications' },
  { awg: '26', mm2: '0.128', current: '0.54A', application: 'Low power signals' },
  { awg: '24', mm2: '0.205', current: '0.86A', application: 'Power & signal' }
];

const qualityTests = [
  { name: 'Continuity Test', desc: '100% electrical continuity verification', icon: '‚ö°' },
  { name: 'Pull Test', desc: 'Crimp pull-off force: 5-8N minimum', icon: 'üí™' },
  { name: 'Dimensional Check', desc: 'Crimp height tolerance: ¬±0.02mm', icon: 'üìè' },
  { name: 'Visual Inspection', desc: '20x microscope inspection', icon: 'üî¨' }
];

const applications = [
  'Smartphones and tablets',
  'Wearable devices',
  'LED lighting strips',
  'Industrial control boards',
  'Consumer electronics',
  'IoT sensor modules'
];
---

<MainLayout
  title="JST PH 2.0mm Pre-Crimped Leads | AWG 28-24 Crimped Wire Assemblies"
  description="Factory-direct JST PH 2.0mm compatible pre-crimped leads. AWG 28-24, tin-plated brass, 100% tested. Custom lengths, rapid delivery."
>
  <Breadcrumb items={breadcrumbItems} />

  <!-- Hero Section with Close-up Images -->
  <section class="px-4 py-12 bg-bg-secondary border-b border-border">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Image Gallery -->
        <div>
          <div class="aspect-square bg-bg-tertiary border border-border overflow-hidden mb-4">
            <img
              src="/images/products/ph-series-crimp-terminal.jpg"
              alt="JST PH 2.0mm Pre-Crimped Lead Close-up"
              class="w-full h-full object-cover"
              loading="eager"
            />
          </div>
          <div class="grid grid-cols-3 gap-2">
            <div class="aspect-square bg-bg-tertiary border border-border overflow-hidden cursor-pointer hover:border-accent-cyan transition">
              <img
                src="/images/products/ph-series-2pin-housing.jpg"
                alt="PH Series Housing"
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
            <div class="aspect-square bg-bg-tertiary border border-border overflow-hidden cursor-pointer hover:border-accent-cyan transition">
              <img
                src="/images/products/ph-series-4pin-housing.jpg"
                alt="PH Series Terminal"
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
            <div class="aspect-square bg-bg-tertiary border border-border overflow-hidden cursor-pointer hover:border-accent-cyan transition flex items-center justify-center">
              <span class="font-mono text-xs text-text-muted">+ More</span>
            </div>
          </div>
        </div>

        <!-- Product Info -->
        <div>
          <p class="font-mono text-xs text-accent-amber uppercase tracking-widest mb-4">Pre-Crimped Leads</p>
          <h1 class="text-3xl md:text-4xl font-bold tracking-tight mb-4">
            JST PH 2.0mm Pre-Crimped Leads
          </h1>
          <p class="text-text-secondary mb-6">
            High-quality pre-crimped wire assemblies compatible with JST PH series 2.0mm pitch connectors. Tin-plated brass contacts with PA66 GF housing. 100% electrically tested and ready for your assembly process.
          </p>

          <div class="flex flex-wrap gap-4 mb-8">
            <div class="px-4 py-2 bg-accent-green/10 border border-accent-green/30">
              <span class="font-mono text-xs text-accent-green">‚úì 100% Tested</span>
            </div>
            <div class="px-4 py-2 bg-accent-green/10 border border-accent-green/30">
              <span class="font-mono text-xs text-accent-green">‚úì UL Certified</span>
            </div>
            <div class="px-4 py-2 bg-accent-green/10 border border-accent-green/30">
              <span class="font-mono text-xs text-accent-green">‚úì Custom Length</span>
            </div>
          </div>

          <!-- CTA -->
          <div class="flex flex-wrap gap-4">
            <a href="/contact" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300">
              Request Quote
            </a>
            <a href="/compatibility/jst-compatible" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-accent-cyan border border-accent-cyan hover:bg-accent-cyan/10 transition-all duration-300">
              Compatibility Info
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Specifications Grid -->
  <section class="px-4 py-16">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-2xl font-bold mb-8">Technical Specifications</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {specs.map(spec => (
          <div class={`p-6 border ${spec.highlight ? 'border-accent-cyan bg-accent-cyan/5' : 'border-border bg-bg-secondary'}`}>
            <div class="font-mono text-xs text-text-muted uppercase tracking-wider mb-2">{spec.label}</div>
            <div class={`text-2xl font-bold ${spec.highlight ? 'text-accent-cyan' : 'text-text-primary'}`}>{spec.value}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Wire Gauge Options -->
  <section class="px-4 py-16 bg-bg-secondary border-y border-border">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-2xl font-bold mb-8">Wire Gauge Options</h2>
      <p class="text-text-secondary mb-8">Select the appropriate wire gauge based on your current requirements and application constraints.</p>

      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b border-border">
              <th class="px-4 py-3 text-left font-mono text-xs text-accent-cyan uppercase tracking-wider">AWG</th>
              <th class="px-4 py-3 text-left font-mono text-xs text-accent-cyan uppercase tracking-wider">Cross-Section</th>
              <th class="px-4 py-3 text-left font-mono text-xs text-accent-cyan uppercase tracking-wider">Current Rating</th>
              <th class="px-4 py-3 text-left font-mono text-xs text-accent-cyan uppercase tracking-wider">Application</th>
            </tr>
          </thead>
          <tbody>
            {wireOptions.map(wire => (
              <tr class="border-b border-border hover:bg-bg-tertiary">
                <td class="px-4 py-4 font-mono font-bold">{wire.awg}</td>
                <td class="px-4 py-4 font-mono">{wire.mm2}mm¬≤</td>
                <td class="px-4 py-4 font-mono text-accent-cyan">{wire.current}</td>
                <td class="px-4 py-4 text-text-secondary">{wire.application}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Quality Assurance -->
  <section class="px-4 py-16">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-2xl font-bold mb-8">Quality Assurance</h2>
      <p class="text-text-secondary mb-8">Every pre-crimped lead undergoes rigorous testing and inspection to ensure consistent quality and reliability.</p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {qualityTests.map(test => (
          <div class="bg-bg-secondary border border-border p-6">
            <div class="text-3xl mb-3">{test.icon}</div>
            <h3 class="font-bold mb-2">{test.name}</h3>
            <p class="text-text-secondary text-sm">{test.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Applications -->
  <section class="px-4 py-16 bg-bg-secondary border-y border-border">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-2xl font-bold mb-8">Applications</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {applications.map(app => (
          <div class="flex items-start gap-3">
            <span class="text-accent-cyan">‚ñ∏</span>
            <span class="text-text-secondary">{app}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Custom Options -->
  <section class="px-4 py-16">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-2xl font-bold mb-8">Custom Options Available</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="border border-border p-6">
          <h3 class="font-bold mb-3 flex items-center gap-2">
            <span class="text-accent-cyan">‚ö°</span> Custom Lengths
          </h3>
          <p class="text-text-secondary text-sm">Specify exact wire lengths for your application. From 10mm to 5 meters.</p>
        </div>
        <div class="border border-border p-6">
          <h3 class="font-bold mb-3 flex items-center gap-2">
            <span class="text-accent-cyan">üé®</span> Color Options
          </h3>
          <p class="text-text-secondary text-sm">Multiple wire insulation colors available for coding and identification.</p>
        </div>
        <div class="border border-border p-6">
          <h3 class="font-bold mb-3 flex items-center gap-2">
            <span class="text-accent-cyan">üîó</span> Position Config
          </h3>
          <p class="text-text-secondary text-sm">Single-end or dual-end crimped. Custom position configurations available.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Products -->
  <section class="px-4 py-16 bg-bg-secondary border-y border-border">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-2xl font-bold mb-8">Related Products</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a href="/products/xh-series-header" class="group block bg-bg-tertiary border border-border overflow-hidden transition-all duration-300 hover:border-accent-cyan">
          <div class="aspect-video overflow-hidden">
            <img
              src="/images/products/xh-series-4pin-header.jpg"
              alt="XH Series Pre-Crimped Leads"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
            />
          </div>
          <div class="p-6">
            <h3 class="font-bold mb-2 group-hover:text-accent-cyan transition">XH 2.5mm Pre-Crimped Leads</h3>
            <p class="text-text-secondary text-sm">2.5mm pitch, 3A rating, positive locking</p>
          </div>
        </a>

        <a href="/products" class="group block bg-bg-tertiary border border-border overflow-hidden transition-all duration-300 hover:border-accent-cyan">
          <div class="aspect-video overflow-hidden">
            <img
              src="/images/products/eh-series-8pin-ejector.jpg"
              alt="Wire-to-Board Assemblies"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
            />
          </div>
          <div class="p-6">
            <h3 class="font-bold mb-2 group-hover:text-accent-cyan transition">Wire-to-Board Assemblies</h3>
            <p class="text-text-secondary text-sm">Complete assemblies with connectors crimped</p>
          </div>
        </a>

        <a href="/compatibility/jst-compatible" class="group block bg-bg-tertiary border border-border overflow-hidden transition-all duration-300 hover:border-accent-cyan">
          <div class="aspect-video overflow-hidden bg-bg-secondary flex items-center justify-center">
            <span class="text-4xl">üìã</span>
          </div>
          <div class="p-6">
            <h3 class="font-bold mb-2 group-hover:text-accent-cyan transition">JST Compatibility Guide</h3>
            <p class="text-text-secondary text-sm">Full JST series cross-reference</p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="px-4 py-20 text-center">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-3xl font-bold mb-4">Need Custom Configuration?</h2>
      <p class="text-text-secondary mb-8">
        Upload your assembly drawing or specifications. Our engineering team will provide pricing and lead time within 24 hours.
      </p>
      <a href="/contact" class="inline-block px-10 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-accent-green/30">
        Upload Drawing for Quote
      </a>
    </div>
  </section>
</MainLayout>
