---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Products', href: '/products' },
  { name: 'EH Series Ejector Header', href: '/products/eh-series-ejector' }
];

const product = {
  code: 'SEP-015',
  series: 'EH',
  name: 'EH Series Ejector Header 8-Pin',
  pitch: '2.5mm',
  positions: '8',
  voltage: '250V',
  current: '3A',
  material: 'PA66 GF',
  rating: 'UL94V-0',
  feature: 'Ejector Tabs'
};
---

<MainLayout
  title="EH Series Ejector Header 8-Pin | SEP-015 JST Compatible"
  description="2.5mm pitch 8-position ejector header with tool-free disconnect. Positive locking, easy release. Compatible with JST EH series for high-density applications."
  image="/images/products/eh-series-8pin-ejector.jpg"
>
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "EH Series Ejector Header 8-Pin",
    "model": "SEP-015",
    "description": "2.5mm pitch 8-position through-hole header with ejector tabs for tool-free disconnect",
    "brand": {
      "@type": "Brand",
      "name": "Trycay"
    },
    "offers": {
      "@type": "Offer",
      "availability": "https://schema.org/InStock",
      "priceCurrency": "USD"
    },
    "properties": {
      "pitch": "2.5mm",
      "positions": "8",
      "voltage": "250V",
      "current": "3A"
    }
  })} />

  <Breadcrumb items={breadcrumbItems} />

  <section class="px-4 py-16">
    <div class="max-w-5xl mx-auto">
      <!-- Header -->
      <div class="mb-12">
        <div class="flex flex-wrap items-center gap-4 mb-4">
          <span class="font-mono text-xs text-accent-cyan uppercase tracking-widest">EH Series</span>
          <span class="font-mono text-xs text-accent-amber uppercase tracking-wider px-2 py-1 bg-accent-amber/10 border border-accent-amber/30">
            {product.code}
          </span>
          <span class="flex items-center gap-2 font-mono text-xs text-text-muted">
            <span class="w-2 h-2 rounded-full bg-accent-green"></span>
            In Stock
          </span>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-6">
          {product.name}
        </h1>
        <p class="text-xl text-text-secondary leading-relaxed">
          2.5mm pitch through-hole header with ejector tabs for tool-free disconnect operations. Perfect for high-density applications requiring frequent mating cycles, service access, or field maintenance without specialized tools.
        </p>
      </div>

      <!-- Product Image -->
      <div class="mb-12 bg-bg-secondary border border-border rounded-lg overflow-hidden flex justify-center">
        <img
          src="/images/products/eh-series-8pin-ejector.jpg"
          alt="EH Series Ejector Header 8-Pin - SEP-015"
          class="w-full max-w-2xl h-auto"
          loading="eager"
        />
      </div>

      <!-- Quick Specs -->
      <section class="mb-16">
        <div class="bg-bg-secondary border border-accent-cyan p-8">
          <h2 class="text-2xl font-bold mb-6">Quick Specifications</h2>
          <div class="grid grid-cols-2 md:grid-cols-5 gap-6">
            <div>
              <div class="font-mono text-xs text-text-muted uppercase tracking-wider mb-1">Part Number</div>
              <div class="font-mono text-xl font-bold">{product.code}</div>
            </div>
            <div>
              <div class="font-mono text-xs text-text-muted uppercase tracking-wider mb-1">Pitch</div>
              <div class="font-mono text-2xl font-bold text-accent-cyan">{product.pitch}</div>
            </div>
            <div>
              <div class="font-mono text-xs text-text-muted uppercase tracking-wider mb-1">Positions</div>
              <div class="font-mono text-2xl font-bold text-accent-cyan">{product.positions}</div>
            </div>
            <div>
              <div class="font-mono text-xs text-text-muted uppercase tracking-wider mb-1">Voltage</div>
              <div class="font-mono text-2xl font-bold text-accent-cyan">{product.voltage}</div>
            </div>
            <div>
              <div class="font-mono text-xs text-text-muted uppercase tracking-wider mb-1">Current</div>
              <div class="font-mono text-2xl font-bold text-accent-cyan">{product.current}</div>
            </div>
          </div>
        </div>
      </section>

      <!-- Highlight Feature -->
      <section class="mb-16">
        <div class="bg-gradient-to-r from-accent-cyan/10 to-accent-cyan/5 border border-accent-cyan p-8">
          <div class="flex items-start gap-6">
            <div class="w-16 h-16 flex-shrink-0 bg-accent-cyan/20 border border-accent-cyan/40 flex items-center justify-center text-accent-cyan">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-bold mb-3">Tool-Free Disconnect</h2>
              <p class="text-text-secondary mb-4">
                Integrated ejector tabs enable quick and easy connector mating and removal without tools. Simply press the ejector tabs to release the friction lock, making field service and maintenance fast and hassle-free.
              </p>
              <ul class="space-y-2 text-sm text-text-secondary">
                <li class="flex items-start gap-2">
                  <span class="text-accent-cyan">✓</span>
                  <span>No tools required for disconnect</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-accent-cyan">✓</span>
                  <span>Reduced risk of PCB damage during service</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-accent-cyan">✓</span>
                  <span>Ideal for high-mating-cycle applications</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-accent-cyan">✓</span>
                  <span>Ergonomic design for easy operation</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- Detailed Specifications -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6">Technical Specifications</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold text-lg mb-4">Electrical Ratings</h3>
            <table class="w-full text-sm">
              <tbody class="text-text-secondary">
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Current Rating</td>
                  <td class="py-2 font-mono">{product.current} (AWG #22-20)</td>
                </tr>
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Voltage Rating</td>
                  <td class="py-2 font-mono">{product.voltage} AC/DC</td>
                </tr>
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Contact Resistance</td>
                  <td class="py-2 font-mono">20 mΩ max</td>
                </tr>
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Insulation Resistance</td>
                  <td class="py-2 font-mono">1000 MΩ min</td>
                </tr>
                <tr>
                  <td class="py-2 font-medium">Withstanding Voltage</td>
                  <td class="py-2 font-mono">1000V AC</td>
                </tr>
              </tbody>
            </table>
          </div>

          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold text-lg mb-4">Mechanical Characteristics</h3>
            <table class="w-full text-sm">
              <tbody class="text-text-secondary">
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Pitch</td>
                  <td class="py-2 font-mono">{product.pitch}</td>
                </tr>
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Number of Positions</td>
                  <td class="py-2 font-mono">{product.positions}</td>
                </tr>
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Mounting Type</td>
                  <td class="py-2 font-mono">Through-Hole</td>
                </tr>
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Housing Material</td>
                  <td class="py-2 font-mono">{product.material}</td>
                </tr>
                <tr>
                  <td class="py-2 font-medium">Operating Temperature</td>
                  <td class="py-2 font-mono">-25°C to +85°C</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>

      <!-- Features -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6">Key Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold mb-2">8-Position High Density</h3>
              <p class="text-text-secondary text-sm">Compact 2.5mm pitch maximizes PCB space for multi-signal and power connections.</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold mb-2">Ejector Tab Design</h3>
              <p class="text-text-secondary text-sm">Integrated tabs for easy, tool-free connector disconnect in tight spaces.</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold mb-2">High Mating Cycle Durability</h3>
              <p class="text-text-secondary text-sm">Designed for repeated mating cycles without performance degradation.</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold mb-2">JST EH Compatible</h3>
              <p class="text-text-secondary text-sm">100% compatible with JST EH series receptacle housings and terminals.</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Applications -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6">Typical Applications</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold mb-2">Field Service Equipment</h3>
            <p class="text-text-secondary text-sm">Devices requiring frequent field maintenance and connector replacement.</p>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold mb-2">Test & Measurement</h3>
            <p class="text-text-secondary text-sm">Test fixtures, measurement equipment with frequent connection cycles.</p>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold mb-2">Industrial Automation</h3>
            <p class="text-text-secondary text-sm">Sensor modules, I/O interfaces requiring easy service access.</p>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold mb-2">Power Distribution</h3>
            <p class="text-text-secondary text-sm">Multi-channel power delivery with serviceability requirements.</p>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold mb-2">LED Display Systems</h3>
            <p class="text-text-secondary text-sm">LED matrix panels, display modules requiring modular connections.</p>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold mb-2">Communication Hubs</h3>
            <p class="text-text-secondary text-sm">Network equipment, communication interfaces with hot-swap capability.</p>
          </div>
        </div>
      </section>

      <!-- Compatible Products -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6">Related Products</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <a href="/products/xh-series-header" class="group block bg-bg-secondary border border-border p-6 transition-all duration-300 hover:border-accent-cyan">
            <span class="font-mono text-xs text-accent-cyan uppercase">SFR-042</span>
            <h3 class="font-bold mt-2 mb-1 group-hover:text-accent-cyan">XH Series Header</h3>
            <p class="text-text-secondary text-sm">2.5mm pitch 4-pin header without ejector</p>
          </a>
          <a href="/products/ph-series-4pin" class="group block bg-bg-secondary border border-border p-6 transition-all duration-300 hover:border-accent-cyan">
            <span class="font-mono text-xs text-accent-amber uppercase">SFR-004</span>
            <h3 class="font-bold mt-2 mb-1 group-hover:text-accent-cyan">PH Series 4-Pin</h3>
            <p class="text-text-secondary text-sm">2.0mm pitch compact connector</p>
          </a>
          <a href="/factory/custom" class="group block bg-bg-secondary border border-border p-6 transition-all duration-300 hover:border-accent-cyan">
            <span class="font-mono text-xs text-accent-cyan uppercase">Custom</span>
            <h3 class="font-bold mt-2 mb-1 group-hover:text-accent-cyan">Custom Harness Design</h3>
            <p class="text-text-secondary text-sm">Let us design your perfect solution</p>
          </a>
        </div>
      </section>

      <!-- CTA -->
      <section class="bg-bg-secondary border border-accent-cyan p-8 text-center">
        <h2 class="text-2xl font-bold mb-4">Request Quote for SEP-015</h2>
        <p class="text-text-secondary mb-6 max-w-2xl mx-auto">
          Volume pricing available. Specify quantity, delivery requirements, and any customization needs for a competitive quote within 24 hours.
        </p>
        <a href="/contact" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300">
          Get Quote
        </a>
      </section>
    </div>
  </section>
</MainLayout>
