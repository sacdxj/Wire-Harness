---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Products', href: '/products' },
  { name: 'Molex KK 254 Wire-to-Board Assembly', href: '/products/molex-kk-254-wire-to-board' }
];

const specs = [
  { label: 'Pitch', value: '2.54mm', highlight: true },
  { label: 'Wire Gauge', value: 'AWG 24-18', highlight: false },
  { label: 'Current Rating', value: '5A', highlight: true },
  { label: 'Voltage Rating', value: '250V AC/DC', highlight: false },
  { label: 'Contact Material', value: 'Tin-plated Brass', highlight: false },
  { label: 'Housing Material', value: 'PA66 GF (UL94V-0)', highlight: false },
  { label: 'Locking', value: 'Friction Lock', highlight: false },
  { label: 'Operating Temp', value: '-25°C to +85°C', highlight: false }
];
---

<MainLayout
  title="Molex KK 254 Wire-to-Board Assembly | 2.54mm PCB Connector"
  description="Factory-direct Molex KK 254 compatible wire-to-board assemblies. AWG 24-18, 5A, standard 2.54mm pitch. Industrial applications."
>
  <Breadcrumb items={breadcrumbItems} />

  <section class="px-4 py-12 bg-bg-secondary border-b border-border">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="aspect-square bg-bg-tertiary border border-border overflow-hidden mb-4">
            <img
              src="/images/products/xh-series-4pin-header.jpg"
              alt="Molex KK 254 Wire-to-Board Assembly Close-up"
              class="w-full h-full object-cover"
              loading="eager"
            />
          </div>
        </div>

        <div>
          <p class="font-mono text-xs text-accent-cyan uppercase tracking-widest mb-4">Wire-to-Board Assemblies</p>
          <h1 class="text-3xl md:text-4xl font-bold tracking-tight mb-4">
            Molex KK 254 Wire-to-Board Assembly
          </h1>
          <p class="text-text-secondary mb-6">
            2.54mm pitch wire-to-board assemblies compatible with Molex KK 254 series. Widely used in industrial control, power supplies, and automation equipment.
          </p>

          <div class="flex flex-wrap gap-4 mb-8">
            <div class="px-4 py-2 bg-accent-green/10 border border-accent-green/30">
              <span class="font-mono text-xs text-accent-green">✓ 100% Tested</span>
            </div>
            <div class="px-4 py-2 bg-accent-green/10 border border-accent-green/30">
              <span class="font-mono text-xs text-accent-green">✓ UL Certified</span>
            </div>
          </div>

          <a href="/contact" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300">
            Request Quote
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="px-4 py-16">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-2xl font-bold mb-8">Technical Specifications</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {specs.map(spec => (
          <div class={`p-6 border ${spec.highlight ? 'border-accent-cyan bg-accent-cyan/5' : 'border-border bg-bg-secondary'}`}>
            <div class="font-mono text-xs text-text-muted uppercase tracking-wider mb-2">{spec.label}</div>
            <div class={`text-2xl font-bold ${spec.highlight ? 'text-accent-cyan' : 'text-text-primary'}`}>{spec.value}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="px-4 py-20 text-center">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-3xl font-bold mb-4">Need Custom Configuration?</h2>
      <a href="/contact" class="inline-block px-10 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300">
        Upload Drawing for Quote
      </a>
    </div>
  </section>
</MainLayout>
---
