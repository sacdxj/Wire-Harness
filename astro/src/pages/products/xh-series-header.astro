---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const breadcrumbItems = [
  { name: 'Home', href: '/' },
  { name: 'Products', href: '/products' },
  { name: 'XH Series 4-Pin Header', href: '/products/xh-series-header' }
];

const product = {
  code: 'SFR-042',
  series: 'XH',
  name: 'XH Series 4-Pin Header',
  pitch: '2.5mm',
  positions: '4',
  voltage: '250V',
  current: '3A',
  material: 'PA66 GF',
  rating: 'UL94V-0',
  type: 'Through-Hole'
};
---

<MainLayout
  title="XH Series 4-Pin Header | SFR-042 JST Compatible"
  description="2.5mm pitch 4-position through-hole PCB header with positive locking. 250V 3A rating. Compatible with JST XH series connectors for power applications."
  image="/images/products/xh-series-4pin-header.jpg"
>
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "XH Series 4-Pin Header",
    "model": "SFR-042",
    "description": "2.5mm pitch 4-position through-hole PCB header with positive locking mechanism",
    "brand": {
      "@type": "Brand",
      "name": "HARNESS+LAB"
    },
    "offers": {
      "@type": "Offer",
      "availability": "https://schema.org/InStock",
      "priceCurrency": "USD"
    },
    "properties": {
      "pitch": "2.5mm",
      "positions": "4",
      "voltage": "250V",
      "current": "3A"
    }
  })} />

  <Breadcrumb items={breadcrumbItems} />

  <section class="px-4 py-16">
    <div class="max-w-5xl mx-auto">
      <!-- Header -->
      <div class="mb-12">
        <div class="flex flex-wrap items-center gap-4 mb-4">
          <span class="font-mono text-xs text-accent-cyan uppercase tracking-widest">XH Series</span>
          <span class="font-mono text-xs text-accent-amber uppercase tracking-wider px-2 py-1 bg-accent-amber/10 border border-accent-amber/30">
            {product.code}
          </span>
          <span class="flex items-center gap-2 font-mono text-xs text-text-muted">
            <span class="w-2 h-2 rounded-full bg-accent-green"></span>
            In Stock
          </span>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-6">
          {product.name}
        </h1>
        <p class="text-xl text-text-secondary leading-relaxed">
          Through-hole 2.5mm pitch header with positive locking mechanism for secure power delivery connections. Ideal for industrial controls, LED lighting systems, and power supply applications requiring reliable, higher-current connections.
        </p>
      </div>

      <!-- Product Image -->
      <div class="mb-12 bg-bg-secondary border border-border rounded-lg overflow-hidden">
        <img
          src="/images/products/xh-series-4pin-header.jpg"
          alt="XH Series 4-Pin Header - SFR-042"
          class="w-full h-auto"
          loading="eager"
        />
      </div>

      <!-- Quick Specs -->
      <section class="mb-16">
        <div class="bg-bg-secondary border border-accent-cyan p-8">
          <h2 class="text-2xl font-bold mb-6">Quick Specifications</h2>
          <div class="grid grid-cols-2 md:grid-cols-5 gap-6">
            <div>
              <div class="font-mono text-xs text-text-muted uppercase tracking-wider mb-1">Part Number</div>
              <div class="font-mono text-xl font-bold">{product.code}</div>
            </div>
            <div>
              <div class="font-mono text-xs text-text-muted uppercase tracking-wider mb-1">Pitch</div>
              <div class="font-mono text-2xl font-bold text-accent-cyan">{product.pitch}</div>
            </div>
            <div>
              <div class="font-mono text-xs text-text-muted uppercase tracking-wider mb-1">Positions</div>
              <div class="font-mono text-2xl font-bold text-accent-cyan">{product.positions}</div>
            </div>
            <div>
              <div class="font-mono text-xs text-text-muted uppercase tracking-wider mb-1">Voltage</div>
              <div class="font-mono text-2xl font-bold text-accent-cyan">{product.voltage}</div>
            </div>
            <div>
              <div class="font-mono text-xs text-text-muted uppercase tracking-wider mb-1">Current</div>
              <div class="font-mono text-2xl font-bold text-accent-cyan">{product.current}</div>
            </div>
          </div>
        </div>
      </section>

      <!-- Detailed Specifications -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6">Technical Specifications</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold text-lg mb-4">Electrical Ratings</h3>
            <table class="w-full text-sm">
              <tbody class="text-text-secondary">
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Current Rating</td>
                  <td class="py-2 font-mono">{product.current} (AWG #22-20)</td>
                </tr>
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Voltage Rating</td>
                  <td class="py-2 font-mono">{product.voltage} AC/DC</td>
                </tr>
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Contact Resistance</td>
                  <td class="py-2 font-mono">20 mΩ max</td>
                </tr>
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Insulation Resistance</td>
                  <td class="py-2 font-mono">1000 MΩ min</td>
                </tr>
                <tr>
                  <td class="py-2 font-medium">Withstanding Voltage</td>
                  <td class="py-2 font-mono">1000V AC</td>
                </tr>
              </tbody>
            </table>
          </div>

          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold text-lg mb-4">Mechanical Characteristics</h3>
            <table class="w-full text-sm">
              <tbody class="text-text-secondary">
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Pitch</td>
                  <td class="py-2 font-mono">{product.pitch}</td>
                </tr>
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Number of Positions</td>
                  <td class="py-2 font-mono">{product.positions}</td>
                </tr>
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Mounting Type</td>
                  <td class="py-2 font-mono">{product.type}</td>
                </tr>
                <tr class="border-b border-border/50">
                  <td class="py-2 font-medium">Housing Material</td>
                  <td class="py-2 font-mono">{product.material}</td>
                </tr>
                <tr>
                  <td class="py-2 font-medium">Operating Temperature</td>
                  <td class="py-2 font-mono">-25°C to +85°C</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>

      <!-- Features -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6">Key Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold mb-2">Higher Current Capacity</h3>
              <p class="text-text-secondary text-sm">3A current rating suitable for power delivery applications.</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold mb-2">Positive Locking Mechanism</h3>
              <p class="text-text-secondary text-sm">Secure latch prevents accidental disconnection in vibration environments.</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold mb-2">Through-Hole Mounting</h3>
              <p class="text-text-secondary text-sm">Robust PCB connection for mechanical strength and reliability.</p>
            </div>
          </div>
          <div class="flex gap-4">
            <div class="w-12 h-12 flex-shrink-0 bg-accent-cyan/10 border border-accent-cyan/30 flex items-center justify-center text-accent-cyan">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-bold mb-2">JST XH Compatible</h3>
              <p class="text-text-secondary text-sm">100% compatible with JST XH series receptacle housings and terminals.</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Applications -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6">Typical Applications</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold mb-2">Industrial Controls</h3>
            <p class="text-text-secondary text-sm">PLC systems, motor controllers, industrial automation equipment.</p>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold mb-2">LED Lighting</h3>
            <p class="text-text-secondary text-sm">LED drivers, power supplies, luminaires requiring higher current.</p>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold mb-2">Power Supplies</h3>
            <p class="text-text-secondary text-sm">DC-DC converters, battery chargers, power distribution units.</p>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold mb-2">Battery Management</h3>
            <p class="text-text-secondary text-sm">BMS connections, battery pack balancing, monitoring systems.</p>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold mb-2">Home Appliances</h3>
            <p class="text-text-secondary text-sm">White goods internal connections, HVAC controls.</p>
          </div>
          <div class="bg-bg-secondary border border-border p-6">
            <h3 class="font-bold mb-2">Automotive</h3>
            <p class="text-text-secondary text-sm">Interior electronics, ECU connections, sensor interfaces.</p>
          </div>
        </div>
      </section>

      <!-- Compatible Products -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-6">Related Products</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <a href="/compatibility/jst-xh-cable-assembly" class="group block bg-bg-secondary border border-border p-6 transition-all duration-300 hover:border-accent-cyan">
            <span class="font-mono text-xs text-accent-cyan uppercase">XH Cable Assembly</span>
            <h3 class="font-bold mt-2 mb-1 group-hover:text-accent-cyan">XH Series Assemblies</h3>
            <p class="text-text-secondary text-sm">Complete cable assemblies with XH connectors</p>
          </a>
          <a href="/products/ph-series-4pin" class="group block bg-bg-secondary border border-border p-6 transition-all duration-300 hover:border-accent-cyan">
            <span class="font-mono text-xs text-accent-amber uppercase">SFR-004</span>
            <h3 class="font-bold mt-2 mb-1 group-hover:text-accent-cyan">PH Series 4-Pin</h3>
            <p class="text-text-secondary text-sm">2.0mm pitch for compact signal connections</p>
          </a>
          <a href="/products/eh-series-ejector" class="group block bg-bg-secondary border border-border p-6 transition-all duration-300 hover:border-accent-cyan">
            <span class="font-mono text-xs text-accent-cyan uppercase">SEP-015</span>
            <h3 class="font-bold mt-2 mb-1 group-hover:text-accent-cyan">EH Ejector Header</h3>
            <p class="text-text-secondary text-sm">Tool-free disconnect with ejector mechanism</p>
          </a>
        </div>
      </section>

      <!-- CTA -->
      <section class="bg-bg-secondary border border-accent-cyan p-8 text-center">
        <h2 class="text-2xl font-bold mb-4">Request Quote for SFR-042</h2>
        <p class="text-text-secondary mb-6 max-w-2xl mx-auto">
          Volume pricing available. Specify quantity, delivery requirements, and any customization needs for a competitive quote within 24 hours.
        </p>
        <a href="/contact" class="inline-block px-8 py-4 font-mono text-sm font-bold uppercase tracking-widest text-bg-primary bg-accent-cyan hover:bg-accent-green transition-all duration-300">
          Get Quote
        </a>
      </section>
    </div>
  </section>
</MainLayout>
